<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.shape.*?>
<?import javafx.scene.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.web.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>

<BorderPane fx:id="thisPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="750.0" prefWidth="1300.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.ImagesCombineController">
    <top>
        <fx:include fx:id="mainMenu" source="MainMenu.fxml" />
    </top>
    <center>
        <VBox fx:id="mainPane" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="2.0" BorderPane.alignment="CENTER">
            <children>
                <HBox VBox.vgrow="NEVER">
                    <children>
                        <ToolBar HBox.hgrow="ALWAYS">
                            <items>
                                <Button mnemonicParsing="false" styleClass="main-button" stylesheets="@../styles/MyBox.css" text=" " visible="false" />
                            </items>
                        </ToolBar>
                        <ToolBar fx:id="imageBar" HBox.hgrow="NEVER">
                            <items>
                                <Button fx:id="newWindowButton" mnemonicParsing="false" onAction="#newWindow" >
                                    <graphic>
                                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../buttons/iconView.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button fx:id="zoomOutButton" mnemonicParsing="false" onAction="#zoomOut" >
                                    <graphic>
                                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../buttons/iconZoomOut.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>

                                <Button fx:id="zoomInButton" mnemonicParsing="false" onAction="#zoomIn" >
                                    <graphic>
                                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../buttons/iconZoomIn.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button fx:id="paneSizeButton"  mnemonicParsing="false" onAction="#paneSize" >
                                    <graphic>
                                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../buttons/iconPicBig.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button fx:id="imageSizeButton" mnemonicParsing="false" onAction="#loadedSize" >
                                    <graphic>
                                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../buttons/iconPicSmall.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <CheckBox fx:id="openCheck" mnemonicParsing="false" selected="true" text="%OpenAfterSave" />
                                <Button fx:id="saveButton" defaultButton="true" mnemonicParsing="false" onAction="#saveAction" styleClass="main-button" stylesheets="@../styles/MyBox.css" text="%Save" />
                            </items>
                        </ToolBar>
                    </children>
                </HBox>
                <SplitPane fx:id="splitPane" dividerPositions="0.5" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                    <items>
                        <VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                            <children>
                                <ToolBar maxWidth="1.7976931348623157E308" VBox.vgrow="NEVER">
                                    <items>
                                        <Button fx:id="addFilesButton" mnemonicParsing="false" onAction="#addFilesAction" onMouseEntered="#popFileAdd" >
                                            <graphic>
                                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                    <image>
                                                        <Image url="@../buttons/iconAddFile.png" />
                                                    </image>
                                                </ImageView>
                                            </graphic>
                                        </Button>
                                        <Button fx:id="insertFilesButton" mnemonicParsing="false" onAction="#insertFilesAction" onMouseEntered="#popFileInsert" >
                                            <graphic>
                                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                    <image>
                                                        <Image url="@../buttons/iconInsertFile.png" />
                                                    </image>
                                                </ImageView>
                                            </graphic>
                                        </Button>
                                        <Button fx:id="moveUpButton" mnemonicParsing="false" onAction="#moveUpAction" >
                                            <graphic>
                                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                    <image>
                                                        <Image url="@../buttons/iconUp.png" />
                                                    </image>
                                                </ImageView>
                                            </graphic>
                                        </Button>
                                        <Button fx:id="moveDownButton" mnemonicParsing="false" onAction="#moveDownAction" >
                                            <graphic>
                                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                    <image>
                                                        <Image url="@../buttons/iconDown.png" />
                                                    </image>
                                                </ImageView>
                                            </graphic>
                                        </Button>
                                        <Button fx:id="deleteFilesButton" mnemonicParsing="false" onAction="#deleteFilesAction">
                                            <graphic>
                                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                    <image>
                                                        <Image url="@../buttons/iconDeleteFile.png" />
                                                    </image>
                                                </ImageView>
                                            </graphic>
                                        </Button>
                                        <Button fx:id="clearButton" mnemonicParsing="false" onAction="#clearAction" >
                                            <graphic>
                                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                    <image>
                                                        <Image url="@../buttons/iconClear.png" />
                                                    </image>
                                                </ImageView>
                                            </graphic>
                                        </Button>
                                        <Button fx:id="metaButton" mnemonicParsing="false" onAction="#popMetaData" >
                                            <graphic>
                                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                    <image>
                                                        <Image url="@../buttons/iconMeta.png" />
                                                    </image>
                                                </ImageView>
                                            </graphic>
                                        </Button>
                                        <Button fx:id="infoButton" mnemonicParsing="false" onAction="#infoAction" >
                                            <graphic>
                                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                    <image>
                                                        <Image url="@../buttons/iconInfo.png" />
                                                    </image>
                                                </ImageView>
                                            </graphic>
                                        </Button>
                                    </items>
                                </ToolBar>
                                <TableView fx:id="tableView" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="imageColumn" editable="false" prefWidth="120.0" text="%SourceImage" />
                                        <TableColumn fx:id="sizeColumn" prefWidth="120.0" text="%Size" />
                                        <TableColumn fx:id="typeColumn" prefWidth="100.0" text="%Color" />
                                        <TableColumn fx:id="fileColumn" prefWidth="200.0" text="%File" />
                                        <TableColumn fx:id="indexColumn" text="%Index" />
                                    </columns>
                                </TableView>
                                <Label fx:id="sourcesLabel" maxWidth="1.7976931348623157E308" styleClass="blue-label" stylesheets="@../styles/MyBox.css" VBox.vgrow="NEVER" />
                            </children>
                        </VBox>
                        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="5.0">
                            <children>
                                <TitledPane maxWidth="1.7976931348623157E308" text="%ArrayOptions" VBox.vgrow="NEVER">
                                    <content>
                                        <VBox spacing="10.0">
                                            <children>
                                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                                    <children>
                                                        <RadioButton fx:id="arrayColumnRadio" mnemonicParsing="false" selected="true" text="%SingleColumn">
                                                            <toggleGroup>
                                                                <ToggleGroup fx:id="arrayGroup" />
                                                            </toggleGroup>
                                                        </RadioButton>
                                                        <RadioButton fx:id="arrayRowRadio" mnemonicParsing="false" text="%SingleRow" toggleGroup="$arrayGroup" />
                                                        <RadioButton fx:id="arrayColumnsRadio" mnemonicParsing="false" text="%ColumnsNumber" toggleGroup="$arrayGroup" />
                                                        <ComboBox fx:id="columnsBox" disable="true" editable="true" prefWidth="100.0" />
                                                    </children>
                                                </HBox>
                                                <HBox alignment="CENTER_LEFT" spacing="5.0">
                                                    <children>
                                                        <Label text="%Background" />
                                                        <ColorPicker fx:id="bgPicker" />
                                                        <Button mnemonicParsing="false" onAction="#bgTransparent" >
                                                            <graphic>
                                                                <Rectangle fill="#ffffff00" height="15.0" stroke="BLACK" strokeMiterLimit="0.0" strokeType="INSIDE" width="15.0" />
                                                            </graphic>
                                                        </Button>
                                                        <Button mnemonicParsing="false" onAction="#bgWhite">
                                                            <graphic>
                                                                <Rectangle fill="WHITE" height="15.0" stroke="BLACK" strokeType="INSIDE" width="15.0" />
                                                            </graphic>
                                                        </Button>
                                                        <Button mnemonicParsing="false" onAction="#bgBlack" >
                                                            <graphic>
                                                                <Rectangle height="15.0" stroke="BLACK" strokeType="INSIDE" width="15.0" />
                                                            </graphic>
                                                        </Button>
                                                    </children>
                                                </HBox>
                                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                                    <children>
                                                        <Label text="%Interval" />
                                                        <ComboBox fx:id="intervalBox" editable="true" prefWidth="80.0" />
                                                        <Label text="%Margins" />
                                                        <ComboBox fx:id="MarginsBox" editable="true" prefWidth="80.0" />
                                                    </children>
                                                </HBox>
                                            </children>
                                        </VBox>
                                    </content>
                                </TitledPane>
                                <TitledPane maxWidth="1.7976931348623157E308" text="%SizeOptions" VBox.vgrow="NEVER">
                                    <content>
                                        <VBox spacing="10.0">
                                            <children>
                                                <HBox alignment="CENTER_LEFT" spacing="5.0">
                                                    <children>
                                                        <RadioButton fx:id="keepSizeRadio" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" selected="true" text="%KeepSize">
                                                            <toggleGroup>
                                                                <ToggleGroup fx:id="sizeGroup" />
                                                            </toggleGroup>
                                                        </RadioButton>
                                                        <RadioButton fx:id="sizeBiggerRadio" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" text="%AlignAsBigger" toggleGroup="$sizeGroup" />
                                                        <RadioButton fx:id="sizeSmallerRadio" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" text="%AlignAsSmaller" toggleGroup="$sizeGroup" />
                                                    </children>
                                                </HBox>
                                                <HBox alignment="CENTER_LEFT" spacing="5.0">
                                                    <children>
                                                        <RadioButton fx:id="eachWidthRadio" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" text="%EachWidth" toggleGroup="$sizeGroup" />
                                                        <TextField fx:id="eachWidthInput" disable="true" prefWidth="70.0" promptText="%Width" />
                                                        <RadioButton fx:id="eachHeightRadio" mnemonicParsing="false" text="%EachHeight" toggleGroup="$sizeGroup" />
                                                        <TextField fx:id="eachHeightInput" disable="true" prefWidth="70.0" promptText="%Height" />
                                                    </children>
                                                </HBox>
                                                <HBox alignment="CENTER_LEFT" spacing="5.0">
                                                    <children>
                                                        <RadioButton fx:id="totalWidthRadio" mnemonicParsing="false" text="%TotalWidth" toggleGroup="$sizeGroup" />
                                                        <TextField fx:id="totalWidthInput" disable="true" prefWidth="100.0" promptText="%Width" />
                                                        <RadioButton fx:id="totalHeightRadio" mnemonicParsing="false" text="%TotalHeight" toggleGroup="$sizeGroup" />
                                                        <TextField fx:id="totalHeightInput" disable="true" prefWidth="100.0" promptText="%Height" />
                                                    </children>
                                                </HBox>
                                            </children>
                                        </VBox>
                                    </content>
                                </TitledPane>
                                <Label fx:id="imageLabel" styleClass="blue-label" stylesheets="@../styles/MyBox.css" />
                                <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" pannable="true" VBox.vgrow="ALWAYS">
                                    <content>
                                        <AnchorPane fx:id="maskPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onMouseDragged="#showXY" onMouseMoved="#showXY" onMousePressed="#showXY" onMouseReleased="#showXY" VBox.vgrow="ALWAYS">
                                            <children>
                                                <ImageView fx:id="imageView" fitHeight="161.0" fitWidth="141.0" pickOnBounds="true" preserveRatio="true">
                                                </ImageView>
                                            </children>
                                        </AnchorPane>
                                    </content>
                                </ScrollPane>
                            </children>
                        </VBox>
                    </items>
                </SplitPane>
            </children>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </center>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
    <bottom>
        <Label fx:id="bottomLabel" maxWidth="1.7976931348623157E308" styleClass="blue-label" stylesheets="@../styles/MyBox.css" BorderPane.alignment="CENTER_LEFT">
            <BorderPane.margin>
                <Insets left="10.0" right="10.0" />
            </BorderPane.margin>
        </Label>
    </bottom>
</BorderPane>
