<?import javafx.scene.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.web.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>

<BorderPane fx:id="thisPane" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.PdfExtractImagesController">
    <top>
        <fx:include fx:id="mainMenu" source="MainMenu.fxml" />
    </top>
    <center>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <VBox fx:id="paraBox" maxWidth="1.7976931348623157E308">
                    <children>
                        <TitledPane text="%SourcePDF">
                            <content>
                                <fx:include fx:id="sourceSelection" source="PdfSourceSelection.fxml" />
                            </content>
                            <VBox.margin>
                                <Insets top="5.0" />
                            </VBox.margin>
                        </TitledPane>
                        <TitledPane text="%TargetFiles">
                            <content>
                                <VBox>
                                    <children>
                                        <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="NEVER">
                                            <children>
                                                <Label text="%FilesPath">
                                                    <HBox.margin>
                                                        <Insets />
                                                    </HBox.margin>
                                                </Label>
                                                <TextField fx:id="targetPathInput" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                                                <Button  fx:id="selectTargetPathButton" mnemonicParsing="false" onAction="#selectTargetPath"  onMouseEntered="#popTargetPath" >
                                                    <graphic>
                                                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                            <image>
                                                                <Image url="@../buttons/iconImageFolder.png" />
                                                            </image>
                                                        </ImageView>
                                                    </graphic>
                                                </Button>
                                                <CheckBox fx:id="subdirCheck" mnemonicParsing="false" selected="true" text="%CreateSubdirectory" />
                                            </children>
                                            <VBox.margin>
                                                <Insets left="10.0" right="10.0" />
                                            </VBox.margin>
                                        </HBox>
                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                            <children>
                                                <Label text="%FileNamePrefix" />
                                                <TextField fx:id="targetPrefixInput" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                                            </children>
                                            <VBox.margin>
                                                <Insets left="10.0" right="10.0" top="5.0" />
                                            </VBox.margin>
                                        </HBox>
                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                            <children>
                                                <Label text="%AccumulatingNumberFrom" />
                                                <TextField fx:id="acumFromInput" prefWidth="64.0" text="0" />
                                                <CheckBox fx:id="fillZero" mnemonicParsing="false" selected="true" text="%FillZero">
                                                    <HBox.margin>
                                                        <Insets />
                                                    </HBox.margin>
                                                </CheckBox>
                                            </children>
                                            <VBox.margin>
                                                <Insets left="10.0" right="10.0" top="5.0" />
                                            </VBox.margin>
                                        </HBox>
                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                            <children>
                                                <Label text="%FileName" />
                                                <CheckBox fx:id="appendPageNumber" mnemonicParsing="false" selected="true" text="%AppendPageNumber" />
                                                <CheckBox fx:id="appendIndex" mnemonicParsing="false" selected="true" text="%AppendIndex" />
                                            </children>
                                            <VBox.margin>
                                                <Insets left="10.0" right="10.0" top="10.0" />
                                            </VBox.margin>
                                        </HBox>
                                        <HBox alignment="CENTER_RIGHT" prefWidth="242.0" spacing="10.0">
                                            <children>
                                                <Label text="%PreviewPage">
                                                    <HBox.margin>
                                                        <Insets />
                                                    </HBox.margin>
                                                </Label>
                                                <TextField fx:id="previewInput" prefWidth="53.0" text="0" />
                                                <Button fx:id="previewButton" disable="true" mnemonicParsing="false" onAction="#previewAction" >
                                                    <graphic>
                                                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                            <image>
                                                                <Image url="@../buttons/iconPreview.png" />
                                                            </image>
                                                        </ImageView>
                                                    </graphic>
                                                </Button>
                                            </children>
                                            <VBox.margin>
                                                <Insets left="10.0" right="10.0" top="5.0" />
                                            </VBox.margin>
                                        </HBox>
                                    </children>
                                </VBox>
                            </content>
                            <VBox.margin>
                                <Insets top="5.0" />
                            </VBox.margin>
                        </TitledPane>
                    </children>
                </VBox>
                <fx:include fx:id="operationBar" source="Operation.fxml" />
            </children>
        </VBox>
    </center>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</BorderPane>
