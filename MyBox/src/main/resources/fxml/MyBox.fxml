<BorderPane fx:id="thisPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="650.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.MyBoxController">
    <top>
        <HBox id="MyBoxMenuBar" alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onMouseEntered="#hideMenus" stylesheets="@../styles/MyBox.css" BorderPane.alignment="CENTER_LEFT">
            <children>
                <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../img/mybox.png" />
                    </image>
                </ImageView>
                <Label maxWidth="1.7976931348623157E308" text="%AppTitle" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets left="20.0" />
                    </HBox.margin>
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
                <Label fx:id="langLabel" onMouseEntered="#showLanguageMenu" styleClass="blue-label" stylesheets="@../styles/MyBox.css" text="Language/语言" underline="true">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <Label onMouseClicked="#showAbout" onMouseEntered="#hideMenus" styleClass="blue-label" stylesheets="@../styles/MyBox.css" text="%About" underline="true">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="20.0" right="40.0" />
                    </HBox.margin>
                </Label>
            </children>
            <padding>
                <Insets left="5.0" right="5.0" />
            </padding>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
        </HBox>
    </top>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
    <center>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <GridPane alignment="CENTER" hgap="10.0" prefHeight="537.0" prefWidth="843.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <VBox fx:id="pdfBox" alignment="CENTER" onMouseEntered="#showPdfMenu" prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <HBox alignment="CENTER" maxHeight="200.0" maxWidth="200.0" prefHeight="200.0" prefWidth="200.0">
                                    <children>
                                        <ImageView fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../img/PdfTools.png" />
                                            </image>
                                        </ImageView>
                                    </children>
                                </HBox>
                                <Label text="%PdfTools">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                        <VBox fx:id="imageBox" alignment="CENTER" onMouseEntered="#showImageMenu" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1">
                            <children>
                                <HBox alignment="CENTER" maxHeight="200.0" maxWidth="200.0" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="NEVER">
                                    <children>
                                        <ImageView fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../img/ImageTools.png" />
                                            </image>
                                        </ImageView>
                                    </children>
                                </HBox>
                                <Label text="%ImageTools">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                        <VBox fx:id="desktopBox" alignment="CENTER" onMouseEntered="#showDesktopMenu" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="2">
                            <children>
                                <HBox alignment="CENTER" maxHeight="200.0" maxWidth="200.0" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="NEVER">
                                    <children>
                                        <ImageView fitHeight="171.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../img/FileTools.png" />
                                            </image>
                                        </ImageView>
                                    </children>
                                </HBox>
                                <Label text="%DesktopTools">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                        <VBox fx:id="dataBox" alignment="CENTER" onMouseEntered="#showDataMenu" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <children>
                                <ImageView fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../img/language.png" />
                                    </image>
                                </ImageView>
                                <Label text="%DataTools">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                        <VBox fx:id="networkBox" alignment="CENTER" onMouseEntered="#showNetworkMenu" prefHeight="200.0" prefWidth="100.0" GridPane.rowIndex="1">
                            <children>
                                <ImageView fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../img/DesktopTools.png" />
                                    </image>
                                </ImageView>
                                <Label text="%NetworkTools">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                        <VBox fx:id="recentBox" alignment="CENTER" onMouseEntered="#showRecentMenu" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="2" GridPane.rowIndex="1">
                            <children>
                                <ImageView fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../img/About.png" />
                                    </image>
                                </ImageView>
                                <Label onMouseClicked="#showAbout" text="%RecentAccessed">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </GridPane>
                <Label fx:id="bottomLabel" maxWidth="1.7976931348623157E308" textFill="#942c2c" VBox.vgrow="NEVER" />
            </children>
        </VBox>
    </center>
</BorderPane>
