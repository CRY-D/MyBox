<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.web.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>

<BorderPane fx:id="thisPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="750.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.ImageTiffEditerController">
    <top>
        <fx:include fx:id="mainMenu" source="MainMenu.fxml" />
    </top>
    <center>
        <VBox fx:id="mainPane" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="5.0">
            <children>
                <HBox alignment="CENTER_LEFT" VBox.vgrow="NEVER">
                    <children>
                        <ToolBar prefWidth="200.0" HBox.hgrow="ALWAYS">
                            <items>
                                <Button mnemonicParsing="false" onAction="#selectSourceFile" onMouseEntered="#popSourceFile" text="%Open" />
                                <Button mnemonicParsing="false" onAction="#createAction" text="%Create" />
                                <Button mnemonicParsing="false" styleClass="main-button" stylesheets="@../styles/MyBox.css" text=" " visible="false" />
                            </items>
                        </ToolBar>
                        <ToolBar HBox.hgrow="NEVER">
                            <items>
                                <CheckBox fx:id="viewCheck" mnemonicParsing="false" selected="true" text="%ViewAfterSave" />
                                <Button fx:id="saveAsButton" mnemonicParsing="false" onAction="#saveAsAction" text="%SaveAs" />
                                <Button fx:id="saveButton" defaultButton="true" mnemonicParsing="false" onAction="#saveAction" styleClass="main-button" stylesheets="@../styles/MyBox.css" text="%Save" />
                            </items>
                        </ToolBar>
                    </children>
                </HBox>
                <TitledPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="%Options" VBox.vgrow="NEVER">
                    <content>
                        <VBox fx:id="optionsBox" spacing="10.0">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.hgrow="NEVER" GridPane.rowIndex="1" VBox.vgrow="NEVER">
                                    <children>
                                        <Label text="%ImageColor" GridPane.rowIndex="1" />
                                        <RadioButton fx:id="RGB" mnemonicParsing="false" selected="true" text="%Colorful">
                                            <toggleGroup>
                                                <ToggleGroup fx:id="colorGroup" />
                                            </toggleGroup>
                                        </RadioButton>
                                        <RadioButton fx:id="ARGB" mnemonicParsing="false" text="%ColorAlpha" toggleGroup="$colorGroup" />
                                        <RadioButton fx:id="Gray" mnemonicParsing="false" text="%ShadesOfGray" toggleGroup="$colorGroup" />
                                        <RadioButton fx:id="Binary" mnemonicParsing="false" text="%BlackOrWhite" toggleGroup="$colorGroup" />
                                    </children>
                                    <VBox.margin>
                                        <Insets top="10.0" />
                                    </VBox.margin>
                                </HBox>
                                <HBox fx:id="compressBox" alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                                    <children>
                                        <Label text="%CompressionType" GridPane.rowIndex="3" />
                                        <HBox fx:id="compressionBox" spacing="10.0">
                                            <children>
                                                <RadioButton mnemonicParsing="false" selected="true" text="%None">
                                                    <toggleGroup>
                                                        <ToggleGroup fx:id="compressionGroup" />
                                                    </toggleGroup>
                                                </RadioButton>
                                            </children>
                                        </HBox>
                                    </children>
                                </HBox>
                                <HBox fx:id="binaryBox" alignment="CENTER_LEFT" spacing="10.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="%BinaryAlgorithm" GridPane.rowIndex="5" />
                                        <RadioButton mnemonicParsing="false" selected="true" text="%Default">
                                            <toggleGroup>
                                                <ToggleGroup fx:id="binaryGroup" />
                                            </toggleGroup>
                                        </RadioButton>
                                        <RadioButton mnemonicParsing="false" text="%OTSU" toggleGroup="$binaryGroup" />
                                        <RadioButton mnemonicParsing="false" text="%Threshold" toggleGroup="$binaryGroup" />
                                        <TextField fx:id="thresholdInput" prefWidth="80.0" promptText="0~255" />
                                    </children>
                                </HBox>

                            </children>
                        </VBox>
                    </content>
                </TitledPane>
                <TitledPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="%SourceFiles" VBox.vgrow="ALWAYS">
                    <content>
                        <VBox fx:id="sourcesBox" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                            <children>
                                <ToolBar maxWidth="1.7976931348623157E308" VBox.vgrow="NEVER">
                                    <items>
                                        <Button fx:id="addButton" mnemonicParsing="false" onAction="#addAction" onMouseEntered="#popFileAdd" text="%Add" />
                                        <Button fx:id="insertButton" mnemonicParsing="false" onAction="#insertAction" onMouseEntered="#popFileInsert" text="%Insert" />
                                        <Button fx:id="upButton" mnemonicParsing="false" onAction="#upAction" text="%Up" />
                                        <Button fx:id="downButton" mnemonicParsing="false" onAction="#downAction" text="%Down" />
                                        <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteAction" text="%Delete" />
                                        <Button fx:id="clearButton" mnemonicParsing="false" onAction="#clearAction" text="%Clear" />
                                        <Button fx:id="viewButton" mnemonicParsing="false" onAction="#viewAction" text="%View" />
                                        <Button fx:id="metaButton" mnemonicParsing="false" onAction="#showMeta" text="%ImageMetaData" />
                                        <Button fx:id="infoButton" mnemonicParsing="false" onAction="#infoAction" text="%ImageInformation" />
                              <CheckBox fx:id="thumbCheck" mnemonicParsing="false" selected="true" text="%Thumbnail" />
                                    </items>
                                </ToolBar>
                                <TableView fx:id="sourceTable" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="imageColumn" editable="false" prefWidth="150.0" text="%SourceImage" />
                                        <TableColumn fx:id="sizeColumn" prefWidth="150.0" text="%Pixels" />
                                        <TableColumn fx:id="typeColumn" prefWidth="100.0" text="%Color" />
                                        <TableColumn fx:id="fileColumn" prefWidth="450.0" text="%File" />
                                        <TableColumn fx:id="indexColumn" text="%Index" />
                                    </columns>
                                </TableView>
                                  <Label fx:id="sourcesLabel" styleClass="blue-label" stylesheets="@../styles/MyBox.css" VBox.vgrow="NEVER" />
                            </children>
                        </VBox>
                    </content>
                </TitledPane>
            </children>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
            <padding>
                <Insets left="10.0" right="10.0" />
            </padding>
        </VBox>
    </center>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
    <bottom>
        <Label fx:id="bottomLabel" maxWidth="1.7976931348623157E308" styleClass="blue-label" stylesheets="@../styles/MyBox.css" BorderPane.alignment="CENTER_LEFT">
            <BorderPane.margin>
                <Insets left="10.0" right="10.0" />
            </BorderPane.margin>
        </Label>
    </bottom>
</BorderPane>
