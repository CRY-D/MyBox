<?import javafx.scene.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.web.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>

<BorderPane fx:id="thisPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="720.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.ImageTiffEditerController">
    <top>
        <fx:include fx:id="mainMenu" source="MainMenu.fxml" />
    </top>
    <center>
        <VBox fx:id="mainPane" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="5.0">
            <children>
                <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" spacing="5.0" VBox.vgrow="NEVER">
                    <children>
                          <Button fx:id="selectSourceButton" mnemonicParsing="false" onAction="#selectSourceFile" onMouseEntered="#popSourceFile">
                              <graphic>
                                  <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                                      <image>
                                          <Image url="@../buttons/iconOpen.png" />
                                      </image>
                                  </ImageView>
                              </graphic>
                          </Button>
                          <Button fx:id="createButton" mnemonicParsing="false" onAction="#createAction">
                              <graphic>
                                  <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                                      <image>
                                          <Image url="@../buttons/iconAddFile.png" />
                                      </image>
                                  </ImageView>
                              </graphic>
                          </Button>
                  <Label maxWidth="1.7976931348623157E308" text=" " HBox.hgrow="ALWAYS" />
                          <CheckBox fx:id="viewCheck" mnemonicParsing="false" selected="true" text="%ViewAfterSave" />
                          <Button fx:id="saveAsButton" mnemonicParsing="false" onAction="#saveAsAction" onMouseEntered="#popSaveAs">
                              <graphic>
                                  <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                                      <image>
                                          <Image url="@../buttons/iconSaveAs.png" />
                                      </image>
                                  </ImageView>
                              </graphic>
                          </Button>
                          <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveAction" styleClass="main-button" stylesheets="@../styles/MyBox.css" text="%Save" />
                    </children>
                </HBox>
                <TitledPane maxWidth="1.7976931348623157E308" minHeight="-Infinity" text="%Options" VBox.vgrow="NEVER">
                    <content>
                        <VBox fx:id="optionsBox" spacing="5.0">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.hgrow="NEVER" GridPane.rowIndex="1" VBox.vgrow="NEVER">
                                    <children>
                                        <Label text="%ImageColor" GridPane.rowIndex="1" />
                                        <RadioButton fx:id="RGB" mnemonicParsing="false" selected="true" text="%Colorful">
                                            <toggleGroup>
                                                <ToggleGroup fx:id="colorGroup" />
                                            </toggleGroup>
                                        </RadioButton>
                                        <RadioButton fx:id="ARGB" mnemonicParsing="false" text="%ColorAlpha" toggleGroup="$colorGroup" />
                                        <RadioButton fx:id="Gray" mnemonicParsing="false" text="%ShadesOfGray" toggleGroup="$colorGroup" />
                                        <RadioButton fx:id="Binary" mnemonicParsing="false" text="%BlackOrWhite" toggleGroup="$colorGroup" />
                                    </children>
                                    <VBox.margin>
                                        <Insets />
                                    </VBox.margin>
                                </HBox>
                                <HBox fx:id="compressBox" alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                                    <children>
                                        <Label text="%CompressionType" GridPane.rowIndex="3" />
                                        <HBox fx:id="compressionBox" spacing="10.0">
                                            <children>
                                                <RadioButton mnemonicParsing="false" selected="true" text="%None">
                                                    <toggleGroup>
                                                        <ToggleGroup fx:id="compressionGroup" />
                                                    </toggleGroup>
                                                </RadioButton>
                                            </children>
                                        </HBox>
                                    </children>
                                </HBox>
                                <HBox fx:id="binaryBox" alignment="CENTER_LEFT" spacing="10.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="%BinaryAlgorithm" GridPane.rowIndex="5" />
                                        <RadioButton mnemonicParsing="false" selected="true" text="%Default">
                                            <toggleGroup>
                                                <ToggleGroup fx:id="binaryGroup" />
                                            </toggleGroup>
                                        </RadioButton>
                                        <RadioButton mnemonicParsing="false" text="%OTSU" toggleGroup="$binaryGroup" />
                                        <RadioButton mnemonicParsing="false" text="%Threshold" toggleGroup="$binaryGroup" />
                                        <TextField fx:id="thresholdInput" prefWidth="80.0" promptText="0~255" />
                                    </children>
                                </HBox>

                            </children>
                        </VBox>
                    </content>
                </TitledPane>
                <TitledPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="%SourceFiles" VBox.vgrow="ALWAYS">
                    <content>
                        <VBox fx:id="tableBox" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                            <children>
                                <fx:include fx:id="table" source="ImagesTable.fxml" />
                            </children>
                        </VBox>
                    </content>
                </TitledPane>
            </children>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
            <padding>
                <Insets left="10.0" right="10.0" />
            </padding>
        </VBox>
    </center>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
    <bottom>
        <Label fx:id="bottomLabel" maxWidth="1.7976931348623157E308" styleClass="blue-label" stylesheets="@../styles/MyBox.css" BorderPane.alignment="CENTER_LEFT">
            <BorderPane.margin>
                <Insets left="10.0" right="10.0" />
            </BorderPane.margin>
        </Label>
    </bottom>
</BorderPane>
