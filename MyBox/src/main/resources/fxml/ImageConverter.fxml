<?import javafx.scene.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.web.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>

<BorderPane fx:id="thisPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.ImageConverterController">
    <top>
        <fx:include fx:id="mainMenu" source="MainMenu.fxml" />
    </top>
    <center>
        <VBox maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
            <children>
                <VBox fx:id="paraBox" maxWidth="1.7976931348623157E308">
                    <children>
                        <TitledPane maxWidth="1.7976931348623157E308" text="%SourceImage">
                            <content>
                                <VBox fx:id="sourceBox">
                                    <children>
                                        <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="NEVER">
                                            <children>
                                                <Label text="%SourceFile" HBox.hgrow="NEVER" />
                                                <TextField fx:id="sourceFileInput" maxWidth="1.7976931348623157E308"  prefWidth="500.0" HBox.hgrow="ALWAYS">
                                                    <HBox.margin>
                                                        <Insets />
                                                    </HBox.margin>
                                                </TextField>
                                                <Button fx:id="selectSourceButton" mnemonicParsing="false" onAction="#selectSourceFile" onMouseEntered="#popSourceFile">
                                                    <graphic>
                                                        <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                                                            <image>
                                                                <Image url="@../buttons/iconOpen.png" />
                                                            </image>
                                                        </ImageView>
                                                    </graphic>
                                                </Button>
                                                <Button fx:id="viewButton" disable="true" mnemonicParsing="false" onAction="#viewAction"  >
                                                    <graphic>
                                                        <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                                                            <image>
                                                                <Image url="@../buttons/iconView.png" />
                                                            </image>
                                                        </ImageView>
                                                    </graphic>
                                                </Button>
                                            </children>
                                            <VBox.margin>
                                                <Insets left="10.0" right="10.0" />
                                            </VBox.margin>
                                        </HBox>
                                    </children>
                                </VBox>
                            </content>
                            <VBox.margin>
                                <Insets top="5.0" />
                            </VBox.margin>
                        </TitledPane>
                        <TitledPane maxWidth="1.7976931348623157E308" text="%TargetImages">
                            <content>
                                <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" prefWidth="1084.0">
                                    <children>
                                        <fx:include fx:id="imageConverterAttributes" source="ImageConverterAttributes.fxml" />
                                    </children>
                                </HBox>
                            </content>
                            <VBox.margin>
                                <Insets top="5.0" />
                            </VBox.margin>
                        </TitledPane>
                        <TitledPane maxWidth="1.7976931348623157E308" text="%TargetFiles">
                            <content>
                                <VBox>
                                    <children>
                                        <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="NEVER">
                                            <children>
                                                <Label text="%FilesPath">
                                                    <HBox.margin>
                                                        <Insets />
                                                    </HBox.margin>
                                                </Label>
                                                <TextField fx:id="targetPathInput" HBox.hgrow="ALWAYS" />
                                                <Button fx:id="selectTargetPathButton" mnemonicParsing="false" onAction="#selectTargetPath"   onMouseEntered="#popTargetPath" HBox.hgrow="NEVER" >
                                                    <graphic>
                                                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                            <image>
                                                                <Image url="@../buttons/iconImageFolder.png" />
                                                            </image>
                                                        </ImageView>
                                                    </graphic>
                                                </Button>
                                            </children>
                                            <VBox.margin>
                                                <Insets left="10.0" right="10.0" />
                                            </VBox.margin>
                                        </HBox>
                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                            <children>
                                                <Label text="%FileNamePrefix" />
                                                <TextField fx:id="targetPrefixInput" HBox.hgrow="ALWAYS" />
                                            </children>
                                            <VBox.margin>
                                                <Insets left="10.0" right="10.0" top="5.0" />
                                            </VBox.margin>
                                        </HBox>
                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                            <children>
                                                <Label text="%FileName">
                                                    <HBox.margin>
                                                        <Insets />
                                                    </HBox.margin>
                                                </Label>
                                                <CheckBox fx:id="appendColor" mnemonicParsing="false" selected="true" text="%AppendImageColor" />
                                                <CheckBox fx:id="appendCompressionType" mnemonicParsing="false" selected="true" text="%AppendCompressionType" />
                                                <CheckBox fx:id="appendQuality" mnemonicParsing="false" selected="true" text="%AppendQuality">
                                                    <HBox.margin>
                                                        <Insets />
                                                    </HBox.margin>
                                                </CheckBox>
                                                <CheckBox fx:id="appendSize" mnemonicParsing="false" selected="true" text="%AppendSize" />
                                            </children>
                                            <VBox.margin>
                                                <Insets left="10.0" right="10.0" top="5.0" />
                                            </VBox.margin>
                                        </HBox>
                                    </children>
                                </VBox>
                            </content>
                            <VBox.margin>
                                <Insets top="5.0" />
                            </VBox.margin>
                        </TitledPane>
                    </children>
                </VBox>
                <fx:include fx:id="operationBar" source="Operation.fxml" />
            </children>
        </VBox>
    </center>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</BorderPane>
