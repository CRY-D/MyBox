<?import javafx.scene.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.web.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>

<BorderPane fx:id="thisPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="720.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.PdfConvertHtmlsBatchController">
    <top>
        <fx:include fx:id="mainMenu" source="MainMenu.fxml" />
    </top>
    <center>
        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
            <children>
                <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                    <children>
                        <VBox fx:id="paraBox" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                            <children>
                                <TitledPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="%SourcePDF" VBox.vgrow="ALWAYS">
                                    <VBox.margin>
                                        <Insets />
                                    </VBox.margin>
                                    <content>
                                        <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" pannable="true" prefHeight="150.0">
                                            <content>
                                                <fx:include fx:id="table" source="PDFsTable.fxml" HBox.hgrow="ALWAYS" />
                                            </content>
                                        </ScrollPane>
                                    </content>
                                </TitledPane>
                                <TitledPane maxWidth="1.7976931348623157E308" text="%Options" VBox.vgrow="NEVER">
                                    <content>
                                        <VBox spacing="10.0">
                                            <children>
                                                <HBox alignment="CENTER_LEFT" layoutX="22.0" layoutY="22.0" spacing="10.0">
                                                    <children>
                                                        <Label text="%Save" />
                                                        <RadioButton fx:id="separateRadio" mnemonicParsing="false" selected="true" text="%SeparateHtmlEachPage">
                                                            <toggleGroup>
                                                                <ToggleGroup fx:id="saveGroup" />
                                                            </toggleGroup>
                                                        </RadioButton>
                                                        <RadioButton mnemonicParsing="false" text="%OneHtmlEachPDF" toggleGroup="$saveGroup" />
                                                    </children>
                                                </HBox>
                                                <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="NEVER">
                                                    <children>
                                                        <Label text="%FontFile" />
                                                        <RadioButton mnemonicParsing="false" selected="true" text="%SaveAsFile">
                                                            <toggleGroup>
                                                                <ToggleGroup fx:id="fontGroup" />
                                                            </toggleGroup>
                                                        </RadioButton>
                                                        <RadioButton mnemonicParsing="false" text="%EmbedLarge" toggleGroup="$fontGroup" />
                                                        <RadioButton mnemonicParsing="false" text="%Ignore" toggleGroup="$fontGroup" />
                                                    </children>
                                                </HBox>
                                                <HBox alignment="CENTER_LEFT" layoutX="22.0" layoutY="22.0" spacing="10.0">
                                                    <children>
                                                        <Label text="%Image" />
                                                        <RadioButton mnemonicParsing="false" selected="true" text="%SaveAsFile">
                                                            <toggleGroup>
                                                                <ToggleGroup fx:id="imageGroup" />
                                                            </toggleGroup>
                                                        </RadioButton>
                                                        <RadioButton mnemonicParsing="false" text="%EmbedLarge" toggleGroup="$imageGroup" />
                                                        <RadioButton mnemonicParsing="false" text="%Ignore" toggleGroup="$imageGroup" />
                                                    </children>
                                                </HBox>
                                            </children>
                                        </VBox>
                                    </content>
                                </TitledPane>
                                <TitledPane maxWidth="1.7976931348623157E308" text="%TargetFiles" VBox.vgrow="NEVER">
                                    <content>
                                        <VBox spacing="10.0">
                                            <children>
                                                <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" nodeOrientation="LEFT_TO_RIGHT" spacing="10.0">
                                                    <children>
                                                        <Label text="%FilesPath" />
                                                        <TextField fx:id="targetPathInput" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                                                        <Button fx:id="selectPathTargetButton" mnemonicParsing="false" onAction="#selectTargetPath" onMouseEntered="#popTargetPath">
                                                            <graphic>
                                                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                                    <image>
                                                                        <Image url="@../buttons/iconFolder.png" />
                                                                    </image>
                                                                </ImageView>
                                                            </graphic>
                                                        </Button>
                                                        <Button fx:id="previewButton" mnemonicParsing="false" onAction="#previewAction">
                                                            <graphic>
                                                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                                    <image>
                                                                        <Image url="@../buttons/iconPreview.png" />
                                                                    </image>
                                                                </ImageView>
                                                            </graphic>
                                                        </Button>
                                                    </children>
                                                </HBox>
                                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                                    <children>
                                                        <Label text="%ExistedFiles" />
                                                        <RadioButton fx:id="targetReplaceRadio" mnemonicParsing="false" text="%Replace">
                                                            <toggleGroup>
                                                                <ToggleGroup fx:id="targetExistGroup" />
                                                            </toggleGroup>
                                                        </RadioButton>
                                                        <RadioButton fx:id="targetRenameRadio" mnemonicParsing="false" selected="true" text="%TargetNameAppend" toggleGroup="$targetExistGroup" />

                                                        <TextField fx:id="targetAppendInput" prefWidth="70.0" text="-m" />
                                                        <RadioButton fx:id="targetSkipRadio" mnemonicParsing="false" text="%Skip" toggleGroup="$targetExistGroup" />
                                                    </children>
                                                </HBox>
                                            </children>
                                        </VBox>
                                    </content>
                                    <VBox.margin>
                                        <Insets top="5.0" />
                                    </VBox.margin>
                                </TitledPane>
                            </children>
                        </VBox>
                    </children>
                </VBox>
                <fx:include fx:id="operationBar" source="OperationBatch.fxml" />
            </children>
        </VBox>
    </center>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</BorderPane>
