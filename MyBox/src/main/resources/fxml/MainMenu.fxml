<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<HBox fx:id="mainMenuPane" alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.MainMenuController">
    <children>
        <MenuBar HBox.hgrow="ALWAYS">
            <menus>
                <Menu fx:id="homeMenu" mnemonicParsing="false" text="%Window">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#showHome" text="%Home" />
                        <MenuItem mnemonicParsing="false" onAction="#exit" text="%Exit" />
                    </items>
                </Menu>
                <Menu fx:id="pdfMenu" mnemonicParsing="false" text="%PdfTools">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#openPdfExtractImages" text="%PdfExtractImages" />
                        <MenuItem mnemonicParsing="false" onAction="#openPdfExtractTexts" text="%PdfExtractTexts" />
                        <MenuItem mnemonicParsing="false" onAction="#openPdfConvertImages" text="%PdfConvertImages" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" onAction="#openPdfExtractImagesBatch" text="%PdfExtractImagesBatch" />
                  <MenuItem mnemonicParsing="false" onAction="#openPdfExtractTextsBatch" text="%PdfExtractTextsBatch" />
                        <MenuItem mnemonicParsing="false" onAction="#openPdfConvertImagesBatch" text="%PdfConvertImagesBatch" />
                    </items>
                </Menu>
                <Menu fx:id="imageMenu" mnemonicParsing="false" text="%ImageTools">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#openImageManufacture" text="%ImageManufacture" />
                        <MenuItem mnemonicParsing="false" onAction="#openMultipleImagesViewer" text="%MultipleImagesViewer" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" onAction="#openImageConverter" text="%ImageConverter" />
                  <MenuItem mnemonicParsing="false" onAction="#openImageConverterBatch" text="%ImageConverterBatch" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" onAction="#openColorPalette" text="%ColorPalette" />
                        <MenuItem mnemonicParsing="false" onAction="#openPixelsCalculator" text="%PixelsCalculator" />
                    </items>
                </Menu>
                <Menu fx:id="fileMenu" mnemonicParsing="false" text="%FileTools">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#openFilesRename" text="%FilesRename" />
                  <MenuItem mnemonicParsing="false" onAction="#openDirsRename" text="%DirectoriesRename" />
                  <MenuItem mnemonicParsing="false" onAction="#openDirectorySynchronize" text="%DirectorySynchronize" />
                  <MenuItem mnemonicParsing="false" onAction="#openFilesArrangement" text="%FilesArrangement" />
               </items></Menu>
            <Menu mnemonicParsing="false" text="%DesktopTools">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#openAlarmClock" text="%AlarmClock" />
              </items>
            </Menu>
                <Menu mnemonicParsing="false" text="%Settings">
                    <items>
                          <RadioMenuItem fx:id="chineseMenuItem" mnemonicParsing="false" onAction="#setChinese" text="中文">
                              <toggleGroup>
                                  <ToggleGroup fx:id="langGroup" />
                              </toggleGroup>
                          </RadioMenuItem>
                          <RadioMenuItem fx:id="englishMenuItem" mnemonicParsing="false" onAction="#setEnglish" text="English" toggleGroup="$langGroup" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <RadioMenuItem fx:id="stopAlarmMenuItem" mnemonicParsing="false" onAction="#setStopAlarm" selected="true" text="%StopAlarmsExit">
                     <toggleGroup>
                        <ToggleGroup fx:id="alarmGroup" />
                     </toggleGroup></RadioMenuItem>
                  <RadioMenuItem fx:id="keepAlarmMenuItem" mnemonicParsing="false" onAction="#setKeepAlarm" text="%KeepAlarmsExit" toggleGroup="$alarmGroup" />
                    </items>
                </Menu>
                <Menu fx:id="helpMenu" mnemonicParsing="false" text="%Help">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#showImageHelp" text="%ImageHelp" />
                        <MenuItem mnemonicParsing="false" onAction="#showAbout" text="%About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </children>
</HBox>
