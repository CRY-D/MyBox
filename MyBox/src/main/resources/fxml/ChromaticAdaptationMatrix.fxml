<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import javafx.collections.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<BorderPane fx:id="thisPane" prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.ChromaticAdaptationMatrixController">
    <top>
        <fx:include fx:id="mainMenu" source="MainMenu.fxml" />
    </top>
    <center>
        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <TabPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                    <tabs>
                        <Tab closable="false" text="%Calculate">
                            <content>
                                <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0">
                                    <children>
                                        <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="20.0" spacing="5.0" VBox.vgrow="NEVER">
                                            <children>
                                    <Hyperlink onAction="#aboutColor" text="%AboutColor" />
                                                <Label maxWidth="1.7976931348623157E308" text=" " HBox.hgrow="ALWAYS" />
                                                <HBox alignment="CENTER_LEFT" spacing="5.0">
                                                    <children>
                                                        <Label text="%DecimalScale">
                                                            <HBox.margin>
                                                                <Insets />
                                                            </HBox.margin>
                                                        </Label>
                                                        <TextField fx:id="scaleInput" prefWidth="60.0" />
                                                        <Label layoutX="220.0" layoutY="15.0" text="%Algorithm">
                                                            <HBox.margin>
                                                                <Insets left="30.0" />
                                                            </HBox.margin>
                                                        </Label>
                                                        <RadioButton mnemonicParsing="false" selected="true" text="Bradford">
                                                            <toggleGroup>
                                                                <ToggleGroup fx:id="algorithmGroup" />
                                                            </toggleGroup>
                                                        </RadioButton>
                                                        <RadioButton mnemonicParsing="false" text="XYZ Scaling" toggleGroup="$algorithmGroup" />
                                                        <RadioButton mnemonicParsing="false" text="Von Kries" toggleGroup="$algorithmGroup" />
                                                    </children>
                                                </HBox>
                                                <Button fx:id="calculateButton" mnemonicParsing="false" onAction="#calculateAction" styleClass="main-button" stylesheets="@../styles/MyBox.css" text="%Calculate">
                                                </Button>
                                            </children>
                                        </HBox>
                              <SplitPane dividerPositions="0.6" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                                 <items>
                                    <ScrollPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefViewportHeight="384.0" prefViewportWidth="1918.0">
                                       <content>
                                          <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                                             <children>
                                                          <TitledPane text="%SourceWhitePoint" VBox.vgrow="NEVER">
                                                              <content>
                                                                  <fx:include fx:id="sourceWP" source="WhitePoint.fxml" />
                                                              </content>
                                                          </TitledPane>
                                                          <TitledPane text="%TargetWhitePoint" VBox.vgrow="NEVER">
                                                              <content>
                                                                  <fx:include fx:id="targetWP" source="WhitePoint.fxml" />
                                                              </content>
                                                          </TitledPane>
                                             </children>
                                          </VBox>
                                       </content>
                                    </ScrollPane>
                                              <TitledPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="%Result">
                                                  <content>
                                                      <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                                                          <children>
                                                              <Label text="%ChromaticAdaptationMatrix" />
                                                              <TextArea fx:id="calculateArea" editable="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS" />
                                                          </children>
                                                      </VBox>
                                                  </content>
                                              </TitledPane>
                                 </items>
                              </SplitPane>
                                    </children>
                                    <padding>
                                        <Insets top="10.0" />
                                    </padding>
                                </VBox>
                            </content>
                        </Tab>
                        <Tab closable="false" text="%Matrices">
                            <content>
                                <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="5.0">
                                    <children>
                                        <HBox alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="NEVER">
                                            <children>
                                                <Label text="%DecimalScale" />
                                                <TextField fx:id="scaleMatricesInput" prefWidth="60.0" />
                                                <Button fx:id="calculateAllButton" mnemonicParsing="false" onAction="#calculateAllAction">
                                                    <graphic>
                                                        <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                                                            <image>
                                                                <Image url="@../buttons/iconCalculator.png" />
                                                            </image>
                                                        </ImageView>
                                                    </graphic>
                                                </Button>
                                                <Label maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                                            </children>
                                        </HBox>
                                        <TableView fx:id="allTableView" editable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                                            <columns>
                                                <TableColumn fx:id="sourceColumn" editable="false" prefWidth="120.0" text="%Source" />
                                                <TableColumn fx:id="targetColumn" editable="false" prefWidth="120.0" text="%Target" />
                                                <TableColumn fx:id="bradfordColumn" prefWidth="300.0" text="Bradford" />
                                                <TableColumn prefWidth="180.0" text="XYZ Scaling" fx:id="xyzColumn" />
                                                <TableColumn fx:id="vonCloumn" prefWidth="300.0" text="Von Kries" />
                                            </columns>
                                        </TableView>
                                    </children>
                                    <padding>
                                        <Insets top="10.0" />
                                    </padding>
                                </VBox>
                            </content>
                        </Tab>
                        <Tab closable="false" text="%Texts">
                            <content>
                                <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="5.0">
                                    <children>
                                        <HBox alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="NEVER">
                                            <children>
                                                <Label maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                                                <Button fx:id="exportButton" layoutX="181.0" layoutY="10.0" mnemonicParsing="false" onAction="#exportAction" onMouseEntered="#popExportPath">
                                                    <graphic>
                                                        <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                                                            <image>
                                                                <Image url="@../buttons/iconExport.png" />
                                                            </image>
                                                        </ImageView>
                                                    </graphic>
                                                </Button>
                                            </children>
                                        </HBox>
                                        <TextArea fx:id="allArea" editable="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS" />
                                    </children>
                                    <padding>
                                        <Insets top="10.0" />
                                    </padding>
                                </VBox>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </center>
</BorderPane>
