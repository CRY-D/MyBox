<BorderPane fx:id="thisPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.ImageOCRBatchController">
    <top>
        <fx:include fx:id="mainMenu" source="MainMenu.fxml" />
    </top>
    <center>
        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
            <children>
                <VBox fx:id="paraBox" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                    <children>
                        <SplitPane dividerPositions="0.5" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                            <items>
                                <VBox fx:id="tableBox" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="5.0">
                                    <children>
                                        <TitledPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="%SourceFiles" VBox.vgrow="ALWAYS">
                                            <content>
                                                <fx:include fx:id="table" source="FilesTable.fxml" HBox.hgrow="ALWAYS" />
                                            </content>
                                        </TitledPane>
                                        <TitledPane maxWidth="1.7976931348623157E308" text="%TargetFiles" VBox.vgrow="NEVER">
                                            <content>
                                                <VBox maxWidth="1.7976931348623157E308" spacing="5.0">
                                                    <children>
                                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                                            <children>
                                                                <Label text="%FilesPath" HBox.hgrow="NEVER">
                                                                    <HBox.margin>
                                                                        <Insets />
                                                                    </HBox.margin>
                                                                </Label>
                                                                <TextField fx:id="targetPathInput" HBox.hgrow="ALWAYS" />
                                                                <Button fx:id="selectPathTargetButton" mnemonicParsing="false" onAction="#selectTargetPath" onMouseEntered="#popTargetPath" HBox.hgrow="NEVER">
                                                                    <graphic>
                                                                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                                            <image>
                                                                                <Image url="@../buttons/iconImageFolder.png" />
                                                                            </image>
                                                                        </ImageView>
                                                                    </graphic>
                                                                </Button>
                                                                <Button fx:id="previewButton" mnemonicParsing="false" onAction="#previewAction">
                                                                    <graphic>
                                                                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                                            <image>
                                                                                <Image url="@../buttons/iconPreview.png" />
                                                                            </image>
                                                                        </ImageView>
                                                                    </graphic>
                                                                </Button>
                                                            </children>
                                                        </HBox>
                                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                                            <children>
                                                                <Label text="%ExistedFiles" />
                                                                <RadioButton fx:id="targetReplaceRadio" mnemonicParsing="false" text="%Replace">
                                                                    <toggleGroup>
                                                                        <ToggleGroup fx:id="targetExistGroup" />
                                                                    </toggleGroup>
                                                                </RadioButton>
                                                                <RadioButton fx:id="targetRenameRadio" mnemonicParsing="false" selected="true" text="%TargetNameAppend" toggleGroup="$targetExistGroup" />

                                                                <TextField fx:id="targetAppendInput" prefWidth="70.0" text="-m" />
                                                                <RadioButton fx:id="targetSkipRadio" mnemonicParsing="false" text="%Skip" toggleGroup="$targetExistGroup" />
                                                            </children>
                                                        </HBox>
                                                    </children>
                                                </VBox>
                                            </content>
                                            <VBox.margin>
                                                <Insets top="5.0" />
                                            </VBox.margin>
                                        </TitledPane>
                                    </children>
                                </VBox>
                                <ScrollPane fitToHeight="true" fitToWidth="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" pannable="true" prefViewportHeight="1020.0" prefViewportWidth="965.0">
                                    <content>
                                        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                                            <children>
                                                <TitledPane maxWidth="1.7976931348623157E308" minHeight="-Infinity" text="%Preprocess">
                                                    <content>
                                                        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" spacing="5.0">
                                                            <children>
                                                                <HBox alignment="CENTER_LEFT" layoutX="32.0" layoutY="152.0" maxWidth="1.7976931348623157E308" spacing="5.0">
                                                                    <children>
                                                                        <Label text="%Enhancement" />
                                                                        <ComboBox fx:id="enhancementSelector" editable="true" prefWidth="200.0" />
                                                                        <Label text="%Scale" />
                                                                        <ComboBox fx:id="scaleSelector" editable="true" prefWidth="100.0" />
                                                                    </children>
                                                                </HBox>
                                                                <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" spacing="5.0" VBox.vgrow="NEVER" />
                                                                <HBox alignment="CENTER_LEFT" layoutX="32.0" layoutY="90.0" maxWidth="1.7976931348623157E308" spacing="5.0">
                                                                    <children>
                                                                        <Label text="%BinaryThreshold" />
                                                                        <ComboBox fx:id="binarySelector" editable="true" prefWidth="100.0" />
                                                                        <Label text="%Rotate" />
                                                                        <ComboBox fx:id="rotateSelector" editable="true" prefWidth="100.0" />
                                                                    </children>
                                                                </HBox>
                                                                <HBox alignment="CENTER_LEFT" layoutX="32.0" layoutY="148.0" maxWidth="1.7976931348623157E308" spacing="5.0" />
                                                                <HBox fx:id="navBox1" alignment="CENTER_LEFT" spacing="5.0">
                                                                    <children>
                                                                        <CheckBox fx:id="deskewCheck" mnemonicParsing="false">
                                                                            <graphic>
                                                                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                                                    <image>
                                                                                        <Image url="@../buttons/iconShear.png" />
                                                                                    </image>
                                                                                </ImageView>
                                                                            </graphic>
                                                                        </CheckBox>
                                                                        <CheckBox fx:id="invertCheck" layoutX="315.0" layoutY="18.0" mnemonicParsing="false">
                                                                            <graphic>
                                                                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                                                    <image>
                                                                                        <Image url="@../buttons/iconInvert.png" />
                                                                                    </image>
                                                                                </ImageView>
                                                                            </graphic>
                                                                        </CheckBox>
                                                                    </children>
                                                                </HBox>
                                                                <Label styleClass="bottom-label" stylesheets="@../styles/MyBox.css" text="%OCRPreprocessComment" wrapText="true" />
                                                            </children>
                                                        </VBox>
                                                    </content>
                                                </TitledPane>
                                                <TitledPane maxWidth="1.7976931348623157E308" minHeight="-Infinity" text="%OCROptions">
                                                    <content>
                                                        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" spacing="5.0">
                                                            <children>
                                                                <HBox alignment="CENTER_LEFT" layoutX="32.0" layoutY="90.0" maxWidth="1.7976931348623157E308" spacing="5.0">
                                                                    <children>
                                                                        <CheckBox fx:id="mergeCheck" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="%MergeTexts" />
                                                                        <CheckBox fx:id="htmlCheck" mnemonicParsing="false" text="html" />
                                                                        <CheckBox fx:id="pdfCheck" mnemonicParsing="false" text="PDF" />
                                                                    </children>
                                                                </HBox>
                                                                <HBox alignment="CENTER_LEFT" layoutX="32.0" layoutY="32.0" maxWidth="1.7976931348623157E308" spacing="5.0">
                                                                    <children>
                                                                        <Label text="%Regions" />
                                                                        <ComboBox fx:id="regionSelector" editable="true" prefWidth="140.0" />
                                                                        <Label text="%Words" />
                                                                        <ComboBox fx:id="wordSelector" editable="true" prefWidth="140.0" />
                                                                    </children>
                                                                </HBox>
                                                                <HBox alignment="CENTER_LEFT" layoutX="32.0" layoutY="393.0" maxWidth="1.7976931348623157E308" spacing="5.0" />
                                                                <Label fx:id="currentOCRFilesLabel" maxWidth="1.7976931348623157E308" styleClass="blue-label" stylesheets="@../styles/MyBox.css"/>
                                                                <HBox alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="NEVER">
                                                                    <children>
                                                                        <Button fx:id="moveDownButton" mnemonicParsing="false" onAction="#downAction">
                                                                            <graphic>
                                                                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                                                    <image>
                                                                                        <Image url="@../buttons/iconDown.png" />
                                                                                    </image>
                                                                                </ImageView>
                                                                            </graphic>
                                                                        </Button>
                                                                        <Button fx:id="moveUpButton" mnemonicParsing="false" onAction="#upAction">
                                                                            <graphic>
                                                                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                                                    <image>
                                                                                        <Image url="@../buttons/iconUp.png" />
                                                                                    </image>
                                                                                </ImageView>
                                                                            </graphic>
                                                                        </Button>
                                                                        <Button fx:id="moveTopButton" mnemonicParsing="false" onAction="#topAction">
                                                                            <graphic>
                                                                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                                                    <image>
                                                                                        <Image url="@../buttons/iconDoubleUp.png" />
                                                                                    </image>
                                                                                </ImageView>
                                                                            </graphic>
                                                                        </Button>
                                                                        <Button fx:id="settingsButton" mnemonicParsing="false" onAction="#settingsAction">
                                                                            <graphic>
                                                                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                                                    <image>
                                                                                        <Image url="@../buttons/iconSetting.png" />
                                                                                    </image>
                                                                                </ImageView>
                                                                            </graphic>
                                                                        </Button>
                                                                        <Label text="%OCRSelection" />
                                                                    </children>
                                                                </HBox>
                                                                <ListView fx:id="languageList" />
                                                            </children>
                                                        </VBox>
                                                    </content>
                                                </TitledPane>
                                            </children>
                                        </VBox>
                                    </content>
                                </ScrollPane>
                            </items>
                        </SplitPane>
                    </children>
                </VBox>
                <fx:include fx:id="operationBar" source="Operation.fxml" />
            </children>
        </VBox>
    </center>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</BorderPane>
