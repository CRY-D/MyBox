<VBox fx:id="thisPane" alignment="CENTER" maxHeight="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.PdfSourceSelectionController">
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="NEVER">
            <children>
                <Label text="%SourceFile" HBox.hgrow="NEVER" />
                <TextField fx:id="sourceFileInput" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </TextField>
                <Button fx:id="selectSourceButton" mnemonicParsing="false" onAction="#selectSourceFile" onMouseEntered="#popSourceFile">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../buttons/iconOpen.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="viewButton" disable="true" mnemonicParsing="false" onAction="#viewAction">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../buttons/iconView.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="infoButton" disable="true" mnemonicParsing="false" onAction="#infoAction">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../buttons/iconInfo.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
            <VBox.margin>
                <Insets bottom="5.0" left="10.0" right="10.0" />
            </VBox.margin>
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label text="%Read" />
                <Label text="%FromPage " />
                <TextField fx:id="fromPageInput" prefWidth="60.0" />
                <Label text="%ToPage" />
                <TextField fx:id="toPageInput" prefWidth="60.0" />
            </children>
            <VBox.margin>
                <Insets left="10.0" right="10.0" />
            </VBox.margin>
        </HBox>
    </children>
</VBox>
