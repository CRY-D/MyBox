<?import javafx.scene.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.web.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>

<BorderPane fx:id="thisPane" prefWidth="900.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.PdfCompressImagesController">
    <top>
        <fx:include fx:id="mainMenu" source="MainMenu.fxml" />
    </top>
    <center>
        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
            <children>
                <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                    <children>
                        <VBox fx:id="paraBox" maxWidth="1.7976931348623157E308">
                            <children>
                                <TitledPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="%SourcePDF">
                                    <content>
                                        <fx:include fx:id="sourceSelection" source="PdfSourceSelection.fxml" />
                                    </content>
                                    <VBox.margin>
                                        <Insets top="5.0" />
                                    </VBox.margin>
                                </TitledPane>
                                <TitledPane text="%Options">
                                    <content>
                                        <VBox spacing="10.0">
                                            <children>
                                                <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="NEVER">
                                                    <children>
                                                        <Label text="%CompressionType" />
                                                        <RadioButton mnemonicParsing="false" selected="true" text="%JpegQuailty">
                                                            <toggleGroup>
                                                                <ToggleGroup fx:id="formatGroup" />
                                                            </toggleGroup>
                                                        </RadioButton>
                                                        <ComboBox fx:id="jpegBox" editable="true" prefWidth="80.0" />
                                                        <Label text="\%">
                                                            <padding>
                                                                <Insets right="10.0" />
                                                            </padding>
                                                        </Label>
                                                    </children>
                                                </HBox>
                                                <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="NEVER">
                                                    <children>
                                                        <Label text="%CompressionType" visible="false" />
                                                        <RadioButton mnemonicParsing="false" text="%CCITT4" toggleGroup="$formatGroup" />
                                                        <TextField fx:id="thresholdInput" prefWidth="80.0" promptText="0~255" />
                                                        <Label text="%EmptyForDefault" />
                                                        <ImageView fx:id="ditherTipsView" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                            <image>
                                                                <Image url="@../buttons/iconTips.png" />
                                                            </image>
                                                        </ImageView>
                                                        <CheckBox fx:id="ditherCheck" mnemonicParsing="false" text="%Dithering" />
                                                    </children>
                                                </HBox>
                                                <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="NEVER">
                                                    <children>
                                                        <Label text="%Author" />
                                                        <TextField fx:id="authorInput" prefWidth="260.0">
                                                            <HBox.margin>
                                                                <Insets />
                                                            </HBox.margin>
                                                        </TextField>
                                                    </children>
                                                </HBox>
                                            </children>
                                        </VBox>
                                    </content>
                                </TitledPane>
                                <TitledPane text="%TargetFiles">
                                    <content>
                                        <VBox spacing="10.0">
                                            <children>
                                                <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" nodeOrientation="LEFT_TO_RIGHT" spacing="10.0">
                                                    <children>
                                                        <Label text="%FileName" />
                                                        <TextField fx:id="targetFileInput" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                                                        <Button fx:id="selectTargetFileButton" mnemonicParsing="false" onAction="#selectTargetFile"  onMouseEntered="#popTargetFile" >
                                                            <graphic>
                                                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                                    <image>
                                                                        <Image url="@../buttons/iconOpen.png" />
                                                                    </image>
                                                                </ImageView>
                                                            </graphic>
                                                        </Button>
                                                    </children>
                                                </HBox>
                                            </children>
                                        </VBox>
                                    </content>
                                    <VBox.margin>
                                        <Insets top="5.0" />
                                    </VBox.margin>
                                </TitledPane>
                            </children>
                        </VBox>
                    </children>
                </VBox>
                <fx:include fx:id="operationBar" source="Operation.fxml" />
            </children>
        </VBox>
    </center>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</BorderPane>
