<?import javafx.scene.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.web.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>

<BorderPane fx:id="thisPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.MarkdownToHtmlController">
    <top>
        <fx:include fx:id="mainMenu" source="MainMenu.fxml" />
    </top>
    <center>
        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
            <children>
                <SplitPane dividerPositions="0.6" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                    <items>
                        <VBox fx:id="tableBox" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                            <children>
                        <TitledPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="%SourceFiles" VBox.vgrow="ALWAYS">
                           <content>
                                      <fx:include fx:id="table" source="FilesTable.fxml" />
                           </content>
                        </TitledPane>
                        <TitledPane fx:id="targetPane" maxWidth="1.7976931348623157E308" text="%TargetFiles" VBox.vgrow="NEVER">
                           <content>
                              <VBox spacing="10.0">
                                 <children>
                                    <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" nodeOrientation="LEFT_TO_RIGHT" spacing="10.0">
                                       <children>
                                          <Label text="%FilesPath" />
                                          <TextField fx:id="targetPathInput" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                                          <Button fx:id="selectPathTargetButton" mnemonicParsing="false" onAction="#selectTargetPath" onMouseEntered="#popTargetPath">
                                             <graphic>
                                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                   <image>
                                                      <Image url="@../buttons/iconFolder.png" />
                                                   </image>
                                                </ImageView>
                                             </graphic>
                                          </Button>
                                       </children>
                                    </HBox>
                                    <FlowPane hgap="5.0" vgap="5.0" VBox.vgrow="NEVER">
                                       <children>
                                          <Label text="%ExistedFiles" />
                                          <RadioButton fx:id="targetReplaceRadio" mnemonicParsing="false" text="%Replace">
                                             <toggleGroup>
                                                <ToggleGroup fx:id="targetExistGroup" />
                                             </toggleGroup>
                                          </RadioButton>
                                          <RadioButton fx:id="targetSkipRadio" mnemonicParsing="false" text="%Skip" toggleGroup="$targetExistGroup" />
                                          <RadioButton fx:id="targetRenameRadio" mnemonicParsing="false" selected="true" text="%TargetNameAppend" toggleGroup="$targetExistGroup" />
                                          <TextField fx:id="targetAppendInput" prefWidth="120.0" text="-m" />
                                       </children>
                                    </FlowPane>
                                 </children>
                              </VBox>
                           </content>
                        </TitledPane>
                            </children>
                        </VBox>
                        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="5.0">
                            <children>
                                <VBox fx:id="paraBox" VBox.vgrow="NEVER">
                                    <children>
                                        <TitledPane fx:id="optionsPane" text="%Options" VBox.vgrow="NEVER">
                                            <content>
                                                <VBox spacing="5.0">
                                                    <children>
                                                        <FlowPane hgap="5.0" vgap="5.0">
                                                            <children>
                                                                <Label text="%Emulation" />
                                                                <ComboBox fx:id="emulationSelector" prefWidth="220.0" />
                                                            </children>
                                                        </FlowPane>
                                                        <FlowPane hgap="5.0" vgap="5.0">
                                                            <children>
                                                                <Label text="%IndentSize" />
                                                                <ComboBox fx:id="indentSelector" editable="true" prefWidth="150.0" />
                                                            </children>
                                                        </FlowPane>
                                                        <FlowPane hgap="5.0" vgap="5.0">
                                                            <children>
                                                                <Label text="%Style" />
                                                                <ComboBox fx:id="styleSelector" prefWidth="240.0" />
                                                            </children>
                                                        </FlowPane>
                                                        <Label text="%Table" />
                                                        <CheckBox fx:id="linesCheck" mnemonicParsing="false" text="%MultiLineRows" />
                                                        <CheckBox fx:id="discardCheck" mnemonicParsing="false" text="%DiscardExtraColumns" />
                                                        <CheckBox fx:id="appendCheck" mnemonicParsing="false" text="%AppendMissingColumns" />
                                                        <CheckBox fx:id="trimCheck" mnemonicParsing="false" text="%TrimCellWhiteSpace" />
                                                        <FlowPane hgap="5.0" vgap="5.0">
                                                            <children>
                                                                <Label text="%Title" />
                                                                <TextField fx:id="titleInput" />
                                                            </children>
                                                        </FlowPane>
                                                    </children>
                                                </VBox>
                                            </content>
                                        </TitledPane>
                                    </children>
                                </VBox>
                                <TitledPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="%Logs" VBox.vgrow="ALWAYS">
                                    <content>
                                        <VBox fx:id="logsBox" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="5.0">
                                            <children>
                                                <TextArea fx:id="logsTextArea" editable="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" wrapText="true" VBox.vgrow="ALWAYS" />
                                                <HBox alignment="CENTER_RIGHT" maxWidth="1.7976931348623157E308" spacing="10.0" VBox.vgrow="NEVER">
                                                    <children>
                                                        <Label text="%MaxLines" />
                                                        <TextField fx:id="maxLinesinput" prefWidth="80.0" text="5000" />
                                                        <CheckBox fx:id="verboseCheck" mnemonicParsing="false" text="%VerboseLogs" />
                                                        <Button fx:id="clearButton1" mnemonicParsing="false" onAction="#clearLogs">
                                                            <graphic>
                                                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                                    <image>
                                                                        <Image url="@../buttons/iconClear.png" />
                                                                    </image>
                                                                </ImageView>
                                                            </graphic>
                                                        </Button>
                                                    </children>
                                                </HBox>
                                            </children>
                                        </VBox>
                                    </content>
                                </TitledPane>
                            </children>
                        </VBox>
                    </items>
                </SplitPane>
                <fx:include fx:id="operationBar" source="Operation.fxml" />
            </children>
        </VBox>
    </center>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</BorderPane>
