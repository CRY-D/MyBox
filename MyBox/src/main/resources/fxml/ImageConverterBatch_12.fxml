<?import javafx.scene.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.web.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>

<BorderPane fx:id="thisPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="720.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.ImageConverterBatchController">
    <top>
        <fx:include fx:id="mainMenu" source="MainMenu.fxml" />
    </top>
    <center>
        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
            <children>
                <VBox fx:id="paraBox" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                    <children>
                        <TitledPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="%SourceImage" VBox.vgrow="ALWAYS">
                            <content>
                                <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                                    <content>
                                        <HBox alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                                            <children>
                                                <fx:include fx:id="table" source="FilesTable.fxml" HBox.hgrow="ALWAYS" />
                                            </children>
                                        </HBox>
                                    </content>
                                </ScrollPane>
                            </content>
                            <VBox.margin>
                                <Insets top="5.0" />
                            </VBox.margin>
                        </TitledPane>
                        <TitledPane maxWidth="1.7976931348623157E308" text="%TargetImages" VBox.vgrow="NEVER">
                            <content>
                                <VBox spacing="5.0">
                                    <children>
                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                            <children>
                                                <Label text="%FileFormat" />
                                                <HBox alignment="CENTER_LEFT" spacing="10.0" HBox.hgrow="ALWAYS">
                                                    <children>
                                                        <RadioButton mnemonicParsing="false" selected="true" text="png">
                                                            <toggleGroup>
                                                                <ToggleGroup fx:id="fileFormatGroup" />
                                                            </toggleGroup>
                                                        </RadioButton>
                                                        <RadioButton mnemonicParsing="false" text="jpg" toggleGroup="$fileFormatGroup" />
                                                        <RadioButton mnemonicParsing="false" text="bmp" toggleGroup="$fileFormatGroup" />
                                                        <RadioButton mnemonicParsing="false" text="tif" toggleGroup="$fileFormatGroup" />
                                                        <RadioButton mnemonicParsing="false" text="gif" toggleGroup="$fileFormatGroup" />
                                                        <RadioButton fx:id="pcxSelect" mnemonicParsing="false" text="pcx" toggleGroup="$fileFormatGroup" />
                                                        <RadioButton mnemonicParsing="false" text="pnm" toggleGroup="$fileFormatGroup" />
                                                        <RadioButton mnemonicParsing="false" text="wbmp" toggleGroup="$fileFormatGroup" />
                                                        <RadioButton fx:id="rawSelect" mnemonicParsing="false" text="Raw" toggleGroup="$fileFormatGroup" />
                                                    </children>
                                                </HBox>
                                            </children>
                                        </HBox>
                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                            <children>

                                                <Label text="%ColorSpace" />
                                                <RadioButton mnemonicParsing="false" selected="true" text="%RGBBased">
                                                    <toggleGroup>
                                                        <ToggleGroup fx:id="csGroup" />
                                                    </toggleGroup>
                                                </RadioButton>
                                                <ComboBox fx:id="rgbSelector" prefWidth="150.0" />
                                                <RadioButton mnemonicParsing="false" text="%CMYKBased" toggleGroup="$csGroup" />
                                                <ComboBox fx:id="cmykSelector" prefWidth="140.0" />
                                                <RadioButton mnemonicParsing="false" text="%CIEBased" toggleGroup="$csGroup" />
                                                <ComboBox fx:id="cieSelector" prefWidth="150.0" />
                                            </children>
                                        </HBox>
                                        <HBox alignment="CENTER_LEFT" layoutX="22.0" layoutY="47.0" spacing="10.0">
                                            <children>
                                                <Label text="%ColorSpace" visible="false" />
                                                <RadioButton mnemonicParsing="false" text="%Others" toggleGroup="$csGroup" />
                                                <ComboBox fx:id="othersSelector" prefWidth="150.0" />
                                                <RadioButton mnemonicParsing="false" text="%IccProfile" toggleGroup="$csGroup" />
                                                <TextField fx:id="iccInput" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                                                <Button fx:id="iccSelectButton" mnemonicParsing="false" onAction="#selectIccAction" onMouseEntered="#popIccFile">
                                                    <graphic>
                                                        <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                                                            <image>
                                                                <Image url="@../buttons/iconOpen.png" />
                                                            </image>
                                                        </ImageView>
                                                    </graphic>
                                                </Button>
                                            </children>
                                        </HBox>
                                        <HBox alignment="CENTER_LEFT" layoutX="22.0" layoutY="47.0" spacing="10.0">
                                            <children>
                                                <Label text="%ColorSpace" visible="false" />
                                            </children>
                                        </HBox>
                                        <HBox fx:id="binBox" alignment="CENTER_LEFT" spacing="10.0">
                                            <children>

                                                <Label text="%BinaryAlgorithm" />
                                                <RadioButton mnemonicParsing="false" selected="true" text="%OTSU">
                                                    <toggleGroup>
                                                        <ToggleGroup fx:id="binaryGroup" />
                                                    </toggleGroup>
                                                </RadioButton>
                                                <RadioButton mnemonicParsing="false" text="%Default" toggleGroup="$binaryGroup" />
                                                <RadioButton mnemonicParsing="false" text="%Threshold" toggleGroup="$binaryGroup" />
                                                <TextField fx:id="thresholdInput" prefWidth="80.0" promptText="0~255" />
                                                <ImageView fx:id="ditherTipsView" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                    <image>
                                                        <Image url="@../buttons/iconTips.png" />
                                                    </image>
                                                </ImageView>
                                                <CheckBox fx:id="ditherCheck" mnemonicParsing="false" text="%Dithering" />
                                            </children>
                                        </HBox>
                                        <HBox fx:id="compressBox" alignment="CENTER_LEFT" spacing="10.0">
                                            <children>

                                                <Label text="%CompressionType" />
                                                <RadioButton mnemonicParsing="false" selected="true" text="%None">
                                                    <toggleGroup>
                                                        <ToggleGroup fx:id="CompressionGroup" />
                                                    </toggleGroup>
                                                </RadioButton>
                                            </children>
                                        </HBox>
                                        <HBox fx:id="qualityBox" alignment="CENTER_LEFT" spacing="10.0">
                                            <children>


                                                <Label text="%ImageQuality" />
                                                <RadioButton fx:id="fullQuality" mnemonicParsing="false" selected="true" text="100%">
                                                    <toggleGroup>
                                                        <ToggleGroup fx:id="QualityGroup" />
                                                    </toggleGroup>
                                                </RadioButton>
                                                <RadioButton mnemonicParsing="false" text="90%" toggleGroup="$QualityGroup" />
                                                <RadioButton mnemonicParsing="false" text="70%" toggleGroup="$QualityGroup" />
                                                <RadioButton mnemonicParsing="false" text="50%" toggleGroup="$QualityGroup" />
                                                <RadioButton mnemonicParsing="false" text="30%" toggleGroup="$QualityGroup" />
                                                <RadioButton mnemonicParsing="false" text="20%" toggleGroup="$QualityGroup" />
                                                <RadioButton mnemonicParsing="false" text="%InputValue" toggleGroup="$QualityGroup" />
                                                <TextField fx:id="qualityInput" prefWidth="50.0" />
                                                <Label text="\%" />
                                            </children>
                                        </HBox>
                                        <HBox fx:id="ratioBox" alignment="CENTER_LEFT" disable="true" maxWidth="1.7976931348623157E308" spacing="10.0">
                                            <children>
                                                <CheckBox fx:id="keepCheck" maxWidth="1.7976931348623157E308" mnemonicParsing="false" selected="true" text="%KeepRatio" />
                                                <HBox fx:id="ratioBaseBox" alignment="CENTER_LEFT" prefWidth="614.0" spacing="10.0">
                                                    <children>
                                                        <RadioButton mnemonicParsing="false" selected="true" text="%BaseOnLarger">
                                                            <toggleGroup>
                                                                <ToggleGroup fx:id="ratioGroup" />
                                                            </toggleGroup>
                                                        </RadioButton>
                                                        <RadioButton mnemonicParsing="false" text="%BaseOnWidth" toggleGroup="$ratioGroup" />
                                                        <RadioButton mnemonicParsing="false" text="%BaseOnHeight" toggleGroup="$ratioGroup" />
                                                        <RadioButton mnemonicParsing="false" text="%BaseOnSmaller" toggleGroup="$ratioGroup" />
                                                    </children>
                                                </HBox>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                            </content>
                            <VBox.margin>
                                <Insets top="5.0" />
                            </VBox.margin>
                        </TitledPane>
                        <TitledPane maxWidth="1.7976931348623157E308" text="%TargetFiles" VBox.vgrow="NEVER">
                            <content>
                                <VBox maxWidth="1.7976931348623157E308">
                                    <children>
                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                            <children>
                                                <Label text="%FilesPath" HBox.hgrow="NEVER">
                                                    <HBox.margin>
                                                        <Insets />
                                                    </HBox.margin>
                                                </Label>
                                                <TextField fx:id="targetPathInput" HBox.hgrow="ALWAYS" />
                                                <Button fx:id="selectTargetPathButton" mnemonicParsing="false" onAction="#selectTargetPath" onMouseEntered="#popTargetPath" HBox.hgrow="NEVER">
                                                    <graphic>
                                                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                            <image>
                                                                <Image url="@../buttons/iconImageFolder.png" />
                                                            </image>
                                                        </ImageView>
                                                    </graphic>
                                                </Button>
                                                <Button fx:id="previewButton" mnemonicParsing="false" onAction="#previewAction">
                                                    <graphic>
                                                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                            <image>
                                                                <Image url="@../buttons/iconPreview.png" />
                                                            </image>
                                                        </ImageView>
                                                    </graphic>
                                                </Button>
                                            </children>
                                        </HBox>
                                        <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" spacing="10.0" VBox.vgrow="NEVER">
                                            <children>
                                                <Label text="%FileName">
                                                    <HBox.margin>
                                                        <Insets />
                                                    </HBox.margin>
                                                </Label>
                                                <CheckBox fx:id="appendColor" mnemonicParsing="false" selected="true" text="%AppendImageColor" />
                                                <CheckBox fx:id="appendCompressionType" mnemonicParsing="false" selected="true" text="%AppendCompressionType" />
                                                <CheckBox fx:id="appendQuality" mnemonicParsing="false" selected="true" text="%AppendQuality">
                                                    <HBox.margin>
                                                        <Insets />
                                                    </HBox.margin>
                                                </CheckBox>
                                                <CheckBox fx:id="appendSize" mnemonicParsing="false" selected="true" text="%AppendSize" />
                                            </children>
                                            <VBox.margin>
                                                <Insets left="10.0" right="10.0" top="5.0" />
                                            </VBox.margin>
                                        </HBox>
                                    </children>
                                </VBox>
                            </content>
                            <VBox.margin>
                                <Insets top="5.0" />
                            </VBox.margin>
                        </TitledPane>
                    </children>
                </VBox>
                <fx:include fx:id="operationBar" source="Operation.fxml" />
            </children>
        </VBox>
    </center>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</BorderPane>
