                                                  <Button fx:id="tButton" mnemonicParsing="false" onAction="#turnOver" text="%TurnOver" />
                                                  <Button fx:id="sButton" mnemonicParsing="false" onAction="#straighten" text="%Straighten" />
                                              </items>
                                          </ToolBar>
                                          <ToolBar fx:id="cropBar" prefHeight="40.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                                              <items>
                                                  <Button mnemonicParsing="false" text=" " visible="false" />
                                              </items>
                                          </ToolBar>
                                      </children>
                                 <cursor>
                                    <Cursor fx:constant="DEFAULT" />
                                 </cursor>
                                  </HBox>
                                      <ScrollPane fx:id="scrollPane" maxWidth="1.7976931348623157E308" pannable="true" VBox.vgrow="ALWAYS">
                                          <content>
                                              <ImageView fx:id="imageView" cache="true" fitHeight="300.0" fitWidth="800.0" onMouseClicked="#clickImage" pickOnBounds="true" preserveRatio="true">
                                                  <cursor>
                                                      <Cursor fx:constant="HAND" />
                                                  </cursor>
                                              </ImageView>
                                          </content>
                                      </ScrollPane>
                                  <HBox fx:id="operation3Box" alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT" VBox.vgrow="NEVER">
                                      <children>
                                          <ToolBar HBox.hgrow="NEVER">
                                              <items>
                                                  <Button fx:id="manufactureButton" mnemonicParsing="false" onAction="#manufactureAction" text="%Manufacture" />
                                              </items>
                                          </ToolBar>
                                            <ToolBar HBox.hgrow="ALWAYS">
                                                <items>
                                                    <Button fx:id="browseButton" mnemonicParsing="false" onAction="#browseImagesAction" text="%Browse" />
                                                </items>
                                            </ToolBar>
                                          <HBox fx:id="navBox" alignment="CENTER_LEFT" HBox.hgrow="NEVER" VBox.vgrow="NEVER">
                                              <children>
                                                  <ToolBar fx:id="navBar" HBox.hgrow="NEVER">
                                                      <items>
                                                          <Label text="%Sort">
                                                              <padding>
                                                                  <Insets left="20.0" />
                                                              </padding>
                                                          </Label>
                                                          <RadioButton mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" selected="true" text="%FileName">
                                                              <toggleGroup>
                                                                  <ToggleGroup fx:id="sortGroup" />
                                                              </toggleGroup>
                                                          </RadioButton>
                                                          <RadioButton mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" text="%ModifyTime" toggleGroup="$sortGroup" />
                                                          <RadioButton mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" text="%Size" toggleGroup="$sortGroup" />
                                                          <Button fx:id="previousButton" mnemonicParsing="false" onAction="#previousAction" text="%PreviousImage" />
                                                          <Button fx:id="nextButton" mnemonicParsing="false" onAction="#nextAction" text="%NextImage" />
                                                      </items>
                                                  </ToolBar>
                                              </children>
                                          </HBox>
                                      </children>
                                  </HBox>
                           </children>
                        </VBox>
                            </content>
                        </Tab>
                        <Tab fx:id="histogramTab" text="%Histogram">
                            <content>
                                <GridPane nodeOrientation="LEFT_TO_RIGHT">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <BarChart fx:id="grayHistogram" alternativeRowFillVisible="false" barGap="1.0" categoryGap="1.0" horizontalGridLinesVisible="false" horizontalZeroLineVisible="false" legendVisible="false" title="%GrayHistogram" verticalGridLinesVisible="false" verticalZeroLineVisible="false">
                                            <xAxis>
                                                <CategoryAxis fx:id="grayX" side="BOTTOM" tickLabelGap="1.0" tickLabelRotation="45.0" tickMarkVisible="false">
                                       <tickLabelFont>
                                          <Font size="4.0" />
                                       </tickLabelFont></CategoryAxis>
                                            </xAxis>
                                            <yAxis>
                                                <NumberAxis fx:id="grayY" side="LEFT" tickLabelGap="1.0" tickLength="10.0" />
                                            </yAxis>
                                        </BarChart>
                                        <BarChart fx:id="redHistogram" alternativeRowFillVisible="false" barGap="1.0" categoryGap="1.0" horizontalGridLinesVisible="false" horizontalZeroLineVisible="false" legendVisible="false" title="%RedHistogram" verticalGridLinesVisible="false" verticalZeroLineVisible="false" GridPane.columnIndex="1">
                                            <xAxis>
                                                <CategoryAxis fx:id="redX" side="BOTTOM" tickLabelGap="1.0" tickLabelsVisible="false" tickMarkVisible="false" />
                                            </xAxis>
                                            <yAxis>
                                                <NumberAxis fx:id="redY" side="LEFT" tickLabelGap="1.0" />
                                            </yAxis>
                                        </BarChart>
                                        <BarChart fx:id="greenHistogram" alternativeRowFillVisible="false" barGap="1.0" categoryGap="1.0" horizontalGridLinesVisible="false" horizontalZeroLineVisible="false" legendVisible="false" title="%GreenHistogram" verticalGridLinesVisible="false" verticalZeroLineVisible="false" GridPane.columnIndex="2">
                                            <xAxis>
                                                <CategoryAxis fx:id="greenX" side="BOTTOM" tickLabelGap="1.0" tickLabelsVisible="false" tickMarkVisible="false" />
                                            </xAxis>
                                            <yAxis>
                                                <NumberAxis fx:id="greenY" side="LEFT" tickLabelGap="1.0" />
                                            </yAxis>
                                        </BarChart>
                                        <BarChart fx:id="blueHistogram" alternativeRowFillVisible="false" barGap="1.0" categoryGap="1.0" horizontalGridLinesVisible="false" horizontalZeroLineVisible="false" legendVisible="false" title="%BlueHistogram" verticalGridLinesVisible="false" verticalZeroLineVisible="false" GridPane.columnIndex="3">
                                            <xAxis>
                                                <CategoryAxis fx:id="blueX" side="BOTTOM" tickLabelGap="1.0" tickLabelsVisible="false" tickMarkVisible="false" />
                                            </xAxis>
                                            <yAxis>
                                                <NumberAxis fx:id="blueY" side="LEFT" tickLabelGap="1.0" />
                                            </yAxis>
                                        </BarChart>
                                        <BarChart fx:id="opacityHistogram" alternativeRowFillVisible="false" barGap="1.0" categoryGap="1.0" horizontalGridLinesVisible="false" horizontalZeroLineVisible="false" legendVisible="false" title="%OpacityHistogram" verticalGridLinesVisible="false" verticalZeroLineVisible="false" GridPane.rowIndex="1">
                                            <xAxis>
                                                <CategoryAxis fx:id="opacityX" side="BOTTOM" tickLabelGap="1.0" tickLabelsVisible="false" tickMarkVisible="false" />
                                            </xAxis>
                                            <yAxis>
                                                <NumberAxis fx:id="opacityY" side="LEFT" tickLabelGap="1.0" />
                                            </yAxis>
                                        </BarChart>
                                        <BarChart fx:id="hueHistogram" alternativeRowFillVisible="false" barGap="1.0" categoryGap="1.0" horizontalGridLinesVisible="false" horizontalZeroLineVisible="false" legendVisible="false" title="%HueHistogram" verticalGridLinesVisible="false" verticalZeroLineVisible="false" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                            <xAxis>
                                                <CategoryAxis fx:id="hueX" side="BOTTOM" tickLabelGap="1.0" tickLabelsVisible="false" tickMarkVisible="false" />
                                            </xAxis>
                                            <yAxis>
                                                <NumberAxis fx:id="hueY" side="LEFT" tickLabelGap="1.0" />
                                            </yAxis>
                                        </BarChart>
                                        <BarChart fx:id="saturationHistogram" alternativeRowFillVisible="false" barGap="1.0" categoryGap="1.0" horizontalGridLinesVisible="false" horizontalZeroLineVisible="false" legendVisible="false" title="%SaturationHistogram" verticalGridLinesVisible="false" verticalZeroLineVisible="false" GridPane.columnIndex="2" GridPane.rowIndex="1">
                                            <xAxis>
                                                <CategoryAxis fx:id="saturationX" side="BOTTOM" tickLabelGap="1.0" tickLabelsVisible="false" tickMarkVisible="false" />
                                            </xAxis>
                                            <yAxis>
                                                <NumberAxis fx:id="saturationY" side="LEFT" tickLabelGap="1.0" />
                                            </yAxis>
                                        </BarChart>
                                        <BarChart fx:id="brightnessHistogram" alternativeRowFillVisible="false" barGap="1.0" categoryGap="1.0" horizontalGridLinesVisible="false" horizontalZeroLineVisible="false" legendVisible="false" title="%BrightnessHistogram" verticalGridLinesVisible="false" verticalZeroLineVisible="false" GridPane.columnIndex="3" GridPane.rowIndex="1">
                                            <xAxis>
                                                <CategoryAxis fx:id="brightnessX" side="BOTTOM" tickLabelGap="1.0" tickLabelsVisible="false" tickMarkVisible="false" />
                                            </xAxis>
                                            <yAxis>
                                                <NumberAxis fx:id="brightnessY" side="LEFT" tickLabelGap="1.0" />
                                            </yAxis>
                                        </BarChart>
                                    </children>
                                </GridPane>
                            </content>
                        </Tab>
                  <Tab fx:id="greyTab" text="%Greyscale">
                     <content>
                        <TableView fx:id="greyTable" nodeOrientation="LEFT_TO_RIGHT" prefHeight="200.0" prefWidth="200.0">
                          <columns>
                              <TableColumn fx:id="greyTypeColumn" prefWidth="243.0" text="%DataType" />
                            <TableColumn fx:id="greyNameColumn" editable="false" prefWidth="307.0" text="%GreyValue" />
                            <TableColumn fx:id="greyValueColumn" minWidth="0.0" prefWidth="294.0" text="%PixelsNumber" />
                          </columns>
                        </TableView>
                     </content>
                  </Tab>
                    </tabs>
                </TabPane>
            </children>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
