<BorderPane fx:id="thisPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="720.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.FilesRenameController">
    <top>
        <fx:include fx:id="mainMenu" source="MainMenu.fxml" />
    </top>
    <center>
        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
            <children>
                <VBox fx:id="paraBox" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                    <children>
                        <TitledPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="%SourceFiles" VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                            <content>
                                <fx:include fx:id="table" source="FilesRenameTable.fxml" HBox.hgrow="ALWAYS" />
                            </content>
                        </TitledPane>
                        <TitledPane maxWidth="1.7976931348623157E308" minHeight="-Infinity" text="%TargetFiles" VBox.vgrow="NEVER">
                            <content>
                                <VBox spacing="10.0">
                                    <children>
                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                            <VBox.margin>
                                                <Insets />
                                            </VBox.margin>
                                            <children>
                                                <Label text="%Sort">
                                                    <HBox.margin>
                                                        <Insets />
                                                    </HBox.margin>
                                                </Label>
                                                <RadioButton mnemonicParsing="false" selected="true" text="%AddedSequence">
                                                    <toggleGroup>
                                                        <ToggleGroup fx:id="sortGroup" />
                                                    </toggleGroup>
                                                </RadioButton>
                                                <RadioButton mnemonicParsing="false" text="%OriginalFileName" toggleGroup="$sortGroup" />
                                                <RadioButton mnemonicParsing="false" text="%CreateTime" toggleGroup="$sortGroup" />
                                                <RadioButton mnemonicParsing="false" text="%ModifyTime" toggleGroup="$sortGroup" />
                                                <RadioButton mnemonicParsing="false" text="%Size" toggleGroup="$sortGroup" />
                                                <CheckBox fx:id="descentCheck" mnemonicParsing="false" text="%Descent">
                                                    <HBox.margin>
                                                        <Insets left="20.0" />
                                                    </HBox.margin>
                                                </CheckBox>
                                            </children>
                                        </HBox>
                                        <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" spacing="10.0" VBox.vgrow="NEVER">
                                            <children>
                                                <Label text="%FileNamePrefix" />
                                                <CheckBox fx:id="originalCheck" mnemonicParsing="false" text="%IncludeOriginalFileName" />
                                                <CheckBox fx:id="stringCheck" mnemonicParsing="false" selected="true" text="%IncludeString" />
                                                <TextField fx:id="stringInput" HBox.hgrow="ALWAYS" />
                                            </children>
                                        </HBox>
                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                            <children>
                                    <Label text="%FileNamePrefix" visible="false" />
                                                <CheckBox fx:id="accumCheck" mnemonicParsing="false" selected="true" text="%AppendAccumulatingNumber">
                                                    <HBox.margin>
                                                        <Insets />
                                                    </HBox.margin>
                                                </CheckBox>
                                                <Label text="%From">
                                                    <HBox.margin>
                                                        <Insets />
                                                    </HBox.margin>
                                                </Label>
                                                <TextField fx:id="acumFromInput" prefWidth="40.0" text="0" />
                                                <CheckBox fx:id="fillZeroCheck" mnemonicParsing="false" selected="true" text="%FillZero" />
                                                <Label text="%Digit" />
                                                <TextField fx:id="digitInput" prefWidth="40.0" />
                                                <Label text="%AccumDigitComments" />
                                            </children>
                                        </HBox>
                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                            <children>
                                                <Label text="%FileNameSuffix" />
                                                <CheckBox fx:id="suffixCheck" mnemonicParsing="false" text="%ModifyAs" />
                                                <TextField fx:id="suffixInput" prefWidth="80.0" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </content>
                            <VBox.margin>
                                <Insets top="5.0" />
                            </VBox.margin>
                        </TitledPane>
                    </children>
                </VBox>
                <fx:include fx:id="operationBar" source="Operation.fxml" />
            </children>
        </VBox>
    </center>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</BorderPane>
