<BorderPane fx:id="thisPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="700.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.ImageSampleController">
    <top>
        <fx:include fx:id="mainMenu" source="MainMenu.fxml" />
    </top>
    <center>
        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" VBox.vgrow="NEVER">
                    <children>
                        <ToolBar nodeOrientation="LEFT_TO_RIGHT" HBox.hgrow="ALWAYS">
                            <items>
                                <Button mnemonicParsing="false" onAction="#selectSourceFile" text="%Open" />
                            </items>
                        </ToolBar>
                        <ToolBar fx:id="opBar" nodeOrientation="RIGHT_TO_LEFT" HBox.hgrow="NEVER">
                            <items>
                                <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveAction" text="%Save" />
                                <CheckBox fx:id="viewCheck" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" selected="true" text="%ViewAfterSave" />
                                <Button fx:id="infoButton" mnemonicParsing="false" onAction="#popImageInformation" text="%ImageInformation" />
                                <Button fx:id="metaButton" mnemonicParsing="false" onAction="#popMetaData" text="%ImageMetaData" />
                            </items>
                        </ToolBar>
                    </children>
                </HBox>
                <HBox fx:id="cropBox" alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT" VBox.vgrow="NEVER">
                    <children>
                        <ToolBar HBox.hgrow="ALWAYS">
                            <items>
                                <Label fx:id="cropLabel" styleClass="blue-label" stylesheets="@../styles/MyBox.css" text="%CropLabel" />
                                <Button mnemonicParsing="false" prefWidth="2.0" text=" " visible="false" />
                            </items>
                        </ToolBar>
                        <ToolBar fx:id="cropBar">
                            <items>
                                <Label text="%LeftTop" />
                                <TextField fx:id="cropLeftXInput" prefWidth="80.0" promptText="X" />
                                <TextField fx:id="cropLeftYInput" prefWidth="80.0" promptText="Y" />
                                <Label text="%RightBottom" />
                                <TextField fx:id="cropRightXInput" prefWidth="80.0" promptText="X" />
                                <TextField fx:id="cropRightYInput" prefWidth="80.0" promptText="Y" />
                                <Button mnemonicParsing="false" onAction="#allAction" text="%All" />
                            </items>
                        </ToolBar>
                    </children>
                </HBox>
                <HBox fx:id="sampleBox" alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT" VBox.vgrow="NEVER">
                    <children>
                        <ToolBar HBox.hgrow="ALWAYS">
                            <items>
                                <Button mnemonicParsing="false" prefWidth="2.0" text=" " visible="false" />
                            </items>
                        </ToolBar>
                        <ToolBar>
                            <items>
                                <Label text="%SubsampleWidth" />
                                <ComboBox fx:id="widthBox" editable="true" prefWidth="100.0" />
                                <Label text="%SubsampleHeight">
                                    <padding>
                                        <Insets left="20.0" />
                                    </padding>
                                </Label>
                                <ComboBox fx:id="heightBox" editable="true" prefWidth="100.0" />
                            </items>
                        </ToolBar>
                    </children>
                </HBox>
                <HBox fx:id="showBox" alignment="CENTER_LEFT" VBox.vgrow="NEVER">
                    <children>
                        <ToolBar HBox.hgrow="ALWAYS">
                            <items>
                                <Label fx:id="sampleLabel" styleClass="blue-label" stylesheets="@../styles/MyBox.css" text=" " />
                                <Button mnemonicParsing="false" visible="false" />
                            </items>
                        </ToolBar>
                        <ToolBar fx:id="hotBar" maxWidth="1.7976931348623157E308" nodeOrientation="RIGHT_TO_LEFT" HBox.hgrow="NEVER">
                            <items>
                                <Button fx:id="imageButton" mnemonicParsing="false" onAction="#imageSize" text="%ImageSize" />
                                <Button fx:id="wButton" mnemonicParsing="false" onAction="#paneSize" text="%PaneSize" />
                                <Button fx:id="inButton" mnemonicParsing="false" onAction="#zoomIn" text="%ZoomIn" />
                                <Button fx:id="outButton" mnemonicParsing="false" onAction="#zoomOut" text="%ZoomOut" />
                            </items>
                        </ToolBar>
                    </children>
                </HBox>
                <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" pannable="true" VBox.vgrow="ALWAYS">
                    <content>
                        <ImageView fx:id="imageView" cache="true" fitHeight="300.0" fitWidth="700.0" onMouseClicked="#clickImage" pickOnBounds="true" preserveRatio="true">
                            <cursor>
                                <Cursor fx:constant="OPEN_HAND" />
                            </cursor>
                        </ImageView>
                    </content>
                </ScrollPane>
            </children>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
            <padding>
                <Insets bottom="5.0" top="5.0" />
            </padding>
        </VBox>
    </center>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
    <bottom>
        <Label fx:id="bottomLabel" maxWidth="1.7976931348623157E308" styleClass="bold-blue-label" stylesheets="@../styles/MyBox.css" BorderPane.alignment="CENTER_LEFT">
            <BorderPane.margin>
                <Insets left="10.0" right="10.0" />
            </BorderPane.margin>
        </Label>
    </bottom>
</BorderPane>
