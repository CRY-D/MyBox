<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.web.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>

<BorderPane fx:id="thisPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.ImagesCombinePdfController">
    <top>
        <fx:include fx:id="mainMenu" source="MainMenu.fxml" />
    </top>
    <center>
        <VBox fx:id="mainPane" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="3.0">
            <children>
                <TitledPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="%SourceFiles" VBox.vgrow="ALWAYS">
                    <content>
                        <VBox fx:id="sourcesBox" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                            <children>
                                <ToolBar maxWidth="1.7976931348623157E308" VBox.vgrow="NEVER">
                                    <items>
                                        <Button fx:id="addButton" mnemonicParsing="false" onAction="#addAction" text="%Add" />
                                        <Button fx:id="insertButton" mnemonicParsing="false" onAction="#insertAction" text="%Insert" />
                                        <Button fx:id="upButton" mnemonicParsing="false" onAction="#upAction" text="%Up" />
                                        <Button fx:id="downButton" mnemonicParsing="false" onAction="#downAction" text="%Down" />
                                        <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteAction" text="%Delete" />
                                        <Button fx:id="clearButton" mnemonicParsing="false" onAction="#clearAction" text="%Clear" />
                                        <Button fx:id="viewButton" mnemonicParsing="false" onAction="#viewAction" text="%View" />
                                        <Button fx:id="metaButton" mnemonicParsing="false" onAction="#showMeta" text="%ImageMetaData" />
                                        <Button fx:id="infoButton" mnemonicParsing="false" onAction="#infoAction" text="%ImageInformation" />
                                        <Label fx:id="sourcesLabel" styleClass="blue-label" stylesheets="@../styles/MyBox.css" text="Label">
                                            <padding>
                                                <Insets left="30.0" />
                                            </padding>
                                        </Label>
                                    </items>
                                </ToolBar>
                                <TableView fx:id="sourceTable" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="imageColumn" editable="false" prefWidth="150.0" text="%SourceImage" />
                                        <TableColumn fx:id="sizeColumn" prefWidth="150.0" text="%Pixels" />
                                        <TableColumn fx:id="typeColumn" prefWidth="100.0" text="%Color" />
                                        <TableColumn fx:id="fileColumn" prefWidth="600.0" text="%File" />
                                        <TableColumn fx:id="indexColumn" prefWidth="100.0" text="%Index" />
                                    </columns>
                                </TableView>
                            </children>
                        </VBox>
                    </content>
                </TitledPane>
                <TitledPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="%Options" VBox.vgrow="NEVER">
                    <content>
                        <VBox fx:id="optionsBox" spacing="5.0">
                            <children>
                                <HBox fx:id="sizeBox" alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="NEVER">
                                    <children>
                                        <Label text="%PageSize">
                                            <HBox.margin>
                                                <Insets />
                                            </HBox.margin>
                                        </Label>
                                        <RadioButton mnemonicParsing="false" selected="true" text="%ImagesSize">
                                            <toggleGroup>
                                                <ToggleGroup fx:id="sizeGroup" />
                                            </toggleGroup>
                                        </RadioButton>
                                        <RadioButton fx:id="eachHeightRadio" mnemonicParsing="false" text="%StandardSize" toggleGroup="$sizeGroup" />
                                        <ComboBox fx:id="standardSizeBox" disable="true" prefWidth="180.0" />
                                        <ComboBox fx:id="standardDpiBox" disable="true" prefWidth="120.0" />
                                        <RadioButton mnemonicParsing="false" text="%Custom" toggleGroup="$sizeGroup" />
                                        <Label text="%UnitPixels" />
                                        <TextField fx:id="customWidthInput" disable="true" prefWidth="70.0" promptText="%Width" />
                                        <TextField fx:id="customHeightInput" disable="true" prefWidth="70.0" promptText="%Height" />
                                    </children>
                                    <VBox.margin>
                                        <Insets top="5.0" />
                                    </VBox.margin>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="NEVER">
                                    <children>
                                        <Label text="%SavedFormat" />
                                        <RadioButton mnemonicParsing="false" selected="true" text="%PNG">
                                            <toggleGroup>
                                                <ToggleGroup fx:id="formatGroup" />
                                            </toggleGroup>
                                        </RadioButton>
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="NEVER">
                                    <children>
                                        <Label text="%SavedFormat" visible="false" />
                                        <RadioButton mnemonicParsing="false" text="%JpegQuailty" toggleGroup="$formatGroup" />
                                        <ComboBox fx:id="jpegBox" editable="true" prefWidth="80.0" />
                                        <Label text="\%">
                                            <padding>
                                                <Insets right="10.0" />
                                            </padding>
                                        </Label>
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="NEVER">
                                    <children>
                                        <Label text="%SavedFormat" visible="false" />
                                        <RadioButton mnemonicParsing="false" text="%CCITT4" toggleGroup="$formatGroup" />
                                        <TextField fx:id="thresholdInput" prefWidth="80.0" promptText="0~255" />
                                        <Label text="%EmptyForDefault" />
                                        <CheckBox fx:id="ditherCheck" mnemonicParsing="false" text="%Dithering" />
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="NEVER">
                                    <children>
                                        <Label text="%PageMargin">
                                            <HBox.margin>
                                                <Insets />
                                            </HBox.margin>
                                        </Label>
                                        <ComboBox fx:id="MarginsBox" editable="true" prefWidth="80.0" />
                                        <CheckBox fx:id="pageNumberCheck" mnemonicParsing="false" selected="true" text="%AddPageNumber">
                                            <HBox.margin>
                                                <Insets left="10.0" />
                                            </HBox.margin>
                                        </CheckBox>
                                        <Label text="%Author">
                                            <padding>
                                                <Insets left="10.0" />
                                            </padding>
                                        </Label>
                                        <TextField fx:id="authorInput" prefWidth="100.0">
                                            <HBox.margin>
                                                <Insets />
                                            </HBox.margin>
                                        </TextField>
                                        <Label text="%PageHeader">
                                            <HBox.margin>
                                                <Insets left="10.0" />
                                            </HBox.margin>
                                        </Label>
                                        <TextField fx:id="headerInput" prefHeight="30.0" prefWidth="200.0" />
                                        <Label text="%FontFile">
                                            <HBox.margin>
                                                <Insets left="10.0" />
                                            </HBox.margin>
                                        </Label>
                                        <ComboBox fx:id="fontBox" editable="true" prefWidth="150.0" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </content>
                </TitledPane>
                <HBox alignment="CENTER_LEFT" VBox.vgrow="NEVER">
                    <children>
                        <ToolBar HBox.hgrow="ALWAYS">
                            <items>
                                <Button mnemonicParsing="false" visible="false"
                                        styleClass="main-button" stylesheets="@../styles/MyBox.css" />
                            </items>
                        </ToolBar>
                        <ToolBar fx:id="targetBar" HBox.hgrow="NEVER">
                            <items>
                                <CheckBox fx:id="viewCheck" mnemonicParsing="false" selected="true" text="%ViewAfterSave" />
                                <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveAction" text="%Save"
                                        styleClass="main-button" stylesheets="@../styles/MyBox.css" />
                            </items>
                        </ToolBar>
                    </children>
                </HBox>
            </children>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
        </VBox>
    </center>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
    <bottom>
        <Label fx:id="bottomLabel" maxWidth="1.7976931348623157E308" styleClass="blue-label" stylesheets="@../styles/MyBox.css" BorderPane.alignment="CENTER_LEFT">
            <BorderPane.margin>
                <Insets left="10.0" right="10.0" />
            </BorderPane.margin>
        </Label>
    </bottom>
</BorderPane>
