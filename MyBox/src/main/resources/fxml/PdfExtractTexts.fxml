<?import javafx.scene.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.web.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>

<BorderPane fx:id="thisPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.PdfExtractTextsController">
    <top>
        <fx:include fx:id="mainMenu" source="MainMenu.fxml" />
    </top>
    <center>
        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
            <children>
                <VBox>
                    <children>
                        <VBox fx:id="paraBox" maxWidth="1.7976931348623157E308">
                            <children>
                                <TitledPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="%SourcePDF">
                                    <content>
                                        <fx:include fx:id="sourceSelection" source="PdfSourceSelection.fxml" />
                                    </content>
                                    <VBox.margin>
                                        <Insets top="5.0" />
                                    </VBox.margin>
                                </TitledPane>
                                <TitledPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="%TargetFiles">
                                    <content>
                                        <VBox spacing="10.0">
                                            <children>
                                                <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="NEVER">
                                                    <children>
                                                        <Label text="%FilesPath" HBox.hgrow="NEVER">
                                                            <HBox.margin>
                                                                <Insets />
                                                            </HBox.margin>
                                                        </Label>
                                                        <TextField fx:id="targetPathInput" HBox.hgrow="ALWAYS" />
                                                        <Button fx:id="selectTargetPathButton" mnemonicParsing="false" onAction="#selectTargetPath"   onMouseEntered="#popTargetPath" HBox.hgrow="NEVER" >
                                                            <graphic>
                                                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                                    <image>
                                                                        <Image url="@../buttons/iconFolder.png" />
                                                                    </image>
                                                                </ImageView>
                                                            </graphic>
                                                        </Button>
                                                    </children>
                                                    <VBox.margin>
                                                        <Insets left="10.0" right="10.0" />
                                                    </VBox.margin>
                                                </HBox>
                                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                                    <children>
                                                        <Label text="%FileName" HBox.hgrow="NEVER" />
                                                        <TextField fx:id="targetFileInput" HBox.hgrow="ALWAYS" />
                                                    </children>
                                                    <VBox.margin>
                                                        <Insets left="10.0" right="10.0" top="5.0" />
                                                    </VBox.margin>
                                                </HBox>
                                                <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" VBox.vgrow="NEVER">
                                                    <children>
                                                        <CheckBox fx:id="separatorCheck" mnemonicParsing="false" selected="true" text="%InsertPageSeparator" />
                                                        <TextField fx:id="separatorInput" prefWidth="780.0" text="------------------------------&lt;Page Number&gt; / &lt;Total Number&gt;------------------------------" HBox.hgrow="ALWAYS" />
                                                    </children>
                                                </HBox>
                                                <Label text="%InsertPageSeparatorComments" VBox.vgrow="NEVER">
                                                    <VBox.margin>
                                                        <Insets />
                                                    </VBox.margin>
                                                </Label>
                                                <HBox alignment="CENTER_RIGHT" prefWidth="242.0" spacing="10.0">
                                                    <children>
                                                        <Label text="%PreviewPage">
                                                            <HBox.margin>
                                                                <Insets />
                                                            </HBox.margin>
                                                        </Label>
                                                        <TextField fx:id="previewInput" prefWidth="53.0" text="0" />
                                                        <Button fx:id="previewButton" disable="true" mnemonicParsing="false" onAction="#previewAction" >
                                                            <graphic>
                                                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                                    <image>
                                                                        <Image url="@../buttons/iconPreview.png" />
                                                                    </image>
                                                                </ImageView>
                                                            </graphic>
                                                        </Button>
                                                    </children>
                                                    <VBox.margin>
                                                        <Insets left="10.0" right="10.0" top="5.0" />
                                                    </VBox.margin>
                                                </HBox>
                                            </children>
                                        </VBox>
                                    </content>
                                    <VBox.margin>
                                        <Insets top="5.0" />
                                    </VBox.margin>
                                </TitledPane>
                            </children>
                        </VBox>
                    </children>
                </VBox>
                <fx:include fx:id="operationBar" source="Operation.fxml" />
            </children>
        </VBox>
    </center>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</BorderPane>
