<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.collections.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="thisPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" nodeOrientation="LEFT_TO_RIGHT" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.SettingsController">
    <children>
        <Label alignment="CENTER" maxWidth="1.7976931348623157E308" prefWidth="850.0" text="%CustomizeButtons" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin>
        </Label>
        <TitledPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="%General">
            <content>
                <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="NEVER">
                            <children>
                                <Label text="%InterfaceLanguage" />
                                <RadioButton fx:id="chineseRadio" mnemonicParsing="false" onAction="#setChinese" selected="true" text="中文">
                                    <toggleGroup>
                                        <ToggleGroup fx:id="langGroup" />
                                    </toggleGroup>
                                </RadioButton>
                                <RadioButton fx:id="englishRadio" mnemonicParsing="false" onAction="#setEnglish" text="English" toggleGroup="$langGroup" />
                                <Label text="%FontSize">
                                    <HBox.margin>
                                        <Insets left="50.0" />
                                    </HBox.margin>
                                </Label>
                                <ComboBox fx:id="fontSizeBox" editable="true" prefWidth="100.0" />
                                <Label text="px" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="NEVER">
                            <children>
                                <Label text="%InterfaceStyle">
                                    <HBox.margin>
                                        <Insets />
                                    </HBox.margin>
                                </Label>
                                <ComboBox fx:id="styleBox" prefWidth="272.0" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="NEVER">
                            <children>
                                <CheckBox fx:id="showCommentsCheck" mnemonicParsing="false" selected="true" text="%ShowComments" />
                                <CheckBox fx:id="stopAlarmCheck" mnemonicParsing="false" selected="true" text="%StopAlarmsExit" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="NEVER">
                            <children>
                                <CheckBox fx:id="restoreStagesSizeCheck" mnemonicParsing="false" selected="true" text="%RestoreStagesSize" />
                                <CheckBox fx:id="newWindowCheck" mnemonicParsing="false" text="%OpenStageInNewWindow" />
                            </children>
                        </HBox>
                        <HBox fx:id="fileHisBox" alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="NEVER">
                            <children>
                                <Label text="%RecentFileHistories" />
                                <TextField fx:id="fileRecentInput" prefWidth="70.0" text="15" />
                                <Button fx:id="setFileRecentButton" mnemonicParsing="false" onAction="#setFileRecentAction" text="%OK" />
                                <Button mnemonicParsing="false" onAction="#noFileHistories" text="%NotRecord" />
                                <Button mnemonicParsing="false" onAction="#clearFileHistories" text="%Clear" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="NEVER">
                            <children>
                                <Label text="%TempDir" />
                                <TextField fx:id="tempDirInput" HBox.hgrow="ALWAYS" />
                                <Button mnemonicParsing="false" onAction="#selectTemp" text="%Select..." />
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>
            </content>
        </TitledPane>
        <TitledPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="%PdfTools">
            <content>
                <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0">
                    <children>
                        <HBox fx:id="pdfMemBox" alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="NEVER">
                            <children>
                                <Label text="%MaxMainMemPDF" />
                                <RadioButton fx:id="pdfMem500MRadio" mnemonicParsing="false" onAction="#PdfMem500MB" selected="true" text="500M">
                                    <toggleGroup>
                                        <ToggleGroup fx:id="pdfMemGroup" />
                                    </toggleGroup>
                                </RadioButton>
                                <RadioButton fx:id="pdfMem1GRadio" mnemonicParsing="false" onAction="#PdfMem1GB" text="1G" toggleGroup="$pdfMemGroup" />
                                <RadioButton fx:id="pdfMem2GRadio" mnemonicParsing="false" onAction="#PdfMem2GB" text="2G" toggleGroup="$pdfMemGroup" />
                                <RadioButton fx:id="pdfMemUnlimitRadio" mnemonicParsing="false" onAction="#pdfMemUnlimit" text="%Unlimit" toggleGroup="$pdfMemGroup" />
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>
            </content>
        </TitledPane>
        <TitledPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="%ImageTools">
            <content>
                <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label text="%StrokeColor" />
                                <ColorPicker fx:id="strokeColorPicker" />
                                <Label text="%StrokeWidth" />
                                <ComboBox fx:id="strokeWidthBox" prefWidth="100.0" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label text="%AnchorColor" />
                                <ColorPicker fx:id="anchorColorPicker" />
                                <Label text="%AnchorWidth" />
                                <ComboBox fx:id="anchorWidthBox" prefWidth="100.0" />
                                <CheckBox fx:id="anchorSolidCheck" mnemonicParsing="false" text="%AnchorSolid" />
                            </children>
                        </HBox>
                        <HBox maxWidth="1.7976931348623157E308" spacing="10.0" VBox.vgrow="NEVER">
                            <children>
                                <CheckBox fx:id="coordinateCheck" mnemonicParsing="false" text="%Coordinate" />
                                <CheckBox fx:id="rulerXCheck" mnemonicParsing="false" text="%RulerX" />
                                <CheckBox fx:id="rulerYCheck" mnemonicParsing="false" text="%RulerY" />
                            </children>
                        </HBox>
                        <HBox layoutX="20.0" layoutY="100.0" maxWidth="1.7976931348623157E308" spacing="10.0">
                            <children>
                                <CheckBox fx:id="removeAlphaCopyCheck" mnemonicParsing="false" selected="true" text="%RemoveAlphaWhenCopy" />
                                <CheckBox fx:id="alphaWhiteCheck" mnemonicParsing="false" onAction="#replaceWhiteAction" selected="true" text="%ReplaceAlphaAsWhite" />
                            </children>
                        </HBox>
                        <HBox fx:id="imageHisBox" alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="NEVER">
                            <children>
                                <Label text="%MaxImageHistories" />
                                <TextField fx:id="imageMaxHisInput" prefWidth="70.0" text="10" />
                                <Button fx:id="setImageHisButton" mnemonicParsing="false" onAction="#setImageHisAction" text="%OK" />
                                <Button mnemonicParsing="false" onAction="#noImageHistories" text="%NotRecord" />
                                <Button mnemonicParsing="false" onAction="#clearImageHistories" text="%Clear" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label text="%ImageDisplaySampleMaxWidth" />
                                <ComboBox fx:id="imageWidthBox" editable="true" prefWidth="150.0" />
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>
            </content>
        </TitledPane>
        <HBox alignment="CENTER_RIGHT" maxWidth="1.7976931348623157E308" spacing="10.0">
            <children>
                <Button mnemonicParsing="false" onAction="#clearSettings" text="%ClearPersonalSettings" />
                <Button mnemonicParsing="false" onAction="#openUserPath" text="%OpenUserPath" />
                <Button fx:id="closeButton" defaultButton="true" mnemonicParsing="false" onAction="#close">
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../buttons/iconClose.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
