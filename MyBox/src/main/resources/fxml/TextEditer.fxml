<BorderPane fx:id="thisPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.TextEditerController">
    <top>
        <fx:include fx:id="mainMenu" source="MainMenu.fxml" />
    </top>
    <center>
        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT">
                    <children>
                        <ToolBar HBox.hgrow="ALWAYS">
                            <items>
                                <Label fx:id="editLabel" styleClass="darkRed-label" stylesheets="@../styles/MyBox.css" />
                                <Button mnemonicParsing="false" text=" " visible="false" />
                            </items>
                        </ToolBar>
                        <ToolBar HBox.hgrow="NEVER">
                            <items>
                                <Button fx:id="deleteButton" disable="true" mnemonicParsing="false" onAction="#deleteAction" text="%Delete" />
                                <Button fx:id="cutButton" disable="true" mnemonicParsing="false" onAction="#cutAction" text="%Cut" />
                                <Button fx:id="selectAllButton" mnemonicParsing="false" onAction="#selectAllAction" text="%SelectAll" />
                                <Button fx:id="copyButton" disable="true" mnemonicParsing="false" onAction="#copyAction" text="%Copy" />
                                <Button fx:id="pasteButton" mnemonicParsing="false" onAction="#pasteAction" text="%Paste" />
                                <Button fx:id="redoButton" mnemonicParsing="false" onAction="#redoAction" text="%Redo" />
                                <Button fx:id="undoButton" mnemonicParsing="false" onAction="#undoAction" text="%Undo" />
                                <Button fx:id="recoverButton" disable="true" mnemonicParsing="false" onAction="#recoverAction" text="%Recover" />
                                <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveAction" text="%Save" />
                            </items>
                        </ToolBar>
                    </children>
                </HBox>
                <TabPane nodeOrientation="RIGHT_TO_LEFT" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="NEVER">
                    <tabs>
                        <Tab fx:id="fileTab" text="%File">
                            <content>
                                <HBox nodeOrientation="LEFT_TO_RIGHT">
                                    <children>
                                        <ToolBar prefHeight="40.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                                            <items>
                                                <Button fx:id="createButton" mnemonicParsing="false" onAction="#createAction" text="%Create" />
                                                <Button fx:id="openButton" mnemonicParsing="false" onAction="#openAction" text="%Open" />
                                                <HBox fx:id="saveAsBox" alignment="CENTER_LEFT" spacing="5.0">
                                                    <children>
                                                        <Button mnemonicParsing="false" onAction="#saveAsAction" text="%SaveAs" />
                                                        <RadioButton fx:id="loadRadio" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" selected="true" text="%LoadAfterSaveAs">
                                                            <toggleGroup>
                                                                <ToggleGroup fx:id="saveAsGroup" />
                                                            </toggleGroup>
                                                        </RadioButton>
                                                        <RadioButton fx:id="openRadio" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" text="%OpenAfterSaveAs" toggleGroup="$saveAsGroup" />
                                                        <RadioButton fx:id="justRadio" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" text="%JustSaveAs" toggleGroup="$saveAsGroup" />
                                                    </children>
                                                </HBox>
                                            </items>
                                        </ToolBar>
                                        <ToolBar HBox.hgrow="NEVER">
                                            <items>
                                                <Button fx:id="infoButton" mnemonicParsing="false" onAction="#infoAction" visible="false" />
                                                <CheckBox fx:id="confirmCheck" mnemonicParsing="false" selected="true" text="%ConfirmWhenSave" />
                                            </items>
                                        </ToolBar>
                                    </children>
                                </HBox>
                            </content>
                        </Tab>
                        <Tab fx:id="replaceTab" text="%FindReplace">
                            <content>
                                <HBox alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT">
                                    <children>
                                        <ToolBar HBox.hgrow="ALWAYS">
                                            <items>
                                                <Button mnemonicParsing="false" text=" " visible="false" />
                                            </items>
                                        </ToolBar>
                                        <ToolBar HBox.hgrow="NEVER">
                                            <items>
                                                <RadioButton fx:id="currentPageRadio" mnemonicParsing="false" selected="true" text="%CurrentPage">
                                                    <toggleGroup>
                                                        <ToggleGroup fx:id="findGroup" />
                                                    </toggleGroup>
                                                </RadioButton>
                                                <RadioButton fx:id="wholeFileRadio" mnemonicParsing="false" text="%WholeFile" toggleGroup="$findGroup" />
                                                <HBox fx:id="findBox" spacing="5.0">
                                                    <children>
                                                        <TextField fx:id="findInput" prefWidth="150.0" />
                                                        <Button fx:id="findFirstButton" disable="true" mnemonicParsing="false" onAction="#findFirstAction" text="%First" />
                                                        <Button fx:id="findNextButton" disable="true" mnemonicParsing="false" onAction="#findNextAction" text="%Next" />
                                                        <Button fx:id="findPreviousButton" disable="true" mnemonicParsing="false" onAction="#findPreviousAction" text="%Previous" />
                                                        <Button fx:id="findLastButton" disable="true" mnemonicParsing="false" onAction="#findLastAction" text="%Last" />
                                                        <Button fx:id="countButton" disable="true" mnemonicParsing="false" onAction="#countAction" text="%Count" />
                                                        <TextField fx:id="replaceInput" prefWidth="150.0" />
                                                        <Button fx:id="replaceButton" disable="true" mnemonicParsing="false" onAction="#replaceAction" text="%Replace" />
                                                        <Button fx:id="replaceAllButton" disable="true" mnemonicParsing="false" onAction="#replaceAllAction" text="%ReplaceAll" />
                                                    </children>
                                                </HBox>
                                            </items>
                                        </ToolBar>
                                    </children>
                                </HBox>
                            </content>
                        </Tab>
                        <Tab fx:id="filterTab" text="%FilterLines">
                            <content>
                                <HBox alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT">
                                    <children>
                                        <ToolBar HBox.hgrow="ALWAYS">
                                            <items>
                                                <Button mnemonicParsing="false" text=" " visible="false" />
                                            </items>
                                        </ToolBar>
                                        <ToolBar HBox.hgrow="NEVER">
                                            <items>
                                                <HBox fx:id="filterTypesBox" alignment="CENTER_LEFT" spacing="5.0">
                                                    <children>
                                                        <RadioButton fx:id="filterIncludeRadio" mnemonicParsing="false" selected="true" text="%IncludeOne">
                                                            <toggleGroup>
                                                                <ToggleGroup fx:id="filterGroup" />
                                                            </toggleGroup>
                                                        </RadioButton>
                                                        <RadioButton mnemonicParsing="false" text="%IncludeAll" toggleGroup="$filterGroup" />
                                                        <RadioButton mnemonicParsing="false" text="%NotIncludeAll" toggleGroup="$filterGroup" />
                                                        <RadioButton mnemonicParsing="false" text="%NotIncludeAny" toggleGroup="$filterGroup" />
                                                    </children>
                                                </HBox>
                                                <HBox fx:id="filterBox" alignment="CENTER_LEFT" spacing="5.0">
                                                    <children>
                                                        <TextField fx:id="filterInput" prefHeight="30.0" prefWidth="300.0" promptText="%SeparateByCommaBlanksInvolved" />
                                                        <CheckBox fx:id="filterLineNumberCheck" mnemonicParsing="false" selected="true" text="%LineNumber" />
                                                        <Button fx:id="filterButton" disable="true" mnemonicParsing="false" onAction="#filterAction" text="%Filter" />
                                                    </children>
                                                </HBox>
                                            </items>
                                        </ToolBar>
                                    </children>
                                </HBox>
                            </content>
                        </Tab>
                        <Tab fx:id="locateTab" text="%Locate">
                            <content>
                                <HBox alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT">
                                    <children>
                                        <ToolBar HBox.hgrow="ALWAYS">
                                            <items>
                                                <Button mnemonicParsing="false" text=" " visible="false" />
                                            </items>
                                        </ToolBar>
                                        <ToolBar HBox.hgrow="NEVER">
                                            <items>
                                    <Label text="%Line" />
                                    <TextField fx:id="lineInput" prefWidth="120.0" />
                                    <Button fx:id="locateLineButton" mnemonicParsing="false" onAction="#locateLine" text="%Go" />
                                    <Label text="%Character">
                                       <padding>
                                          <Insets left="50.0" />
                                       </padding>
                                    </Label>
                                                  <TextField fx:id="objectNumberInput" prefWidth="120.0" />
                                                  <Button fx:id="locateObjectButton" mnemonicParsing="false" onAction="#locateObject" text="%Go" />
                                            </items>
                                        </ToolBar>
                                    </children>
                                </HBox>
                            </content>
                        </Tab>
                        <Tab fx:id="encodeTab" text="%Encode">
                            <content>
                                <HBox alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT">
                                    <children>
                                        <ToolBar HBox.hgrow="ALWAYS">
                                            <items>
                                                <Button mnemonicParsing="false" text=" " visible="false" />
                                            </items>
                                        </ToolBar>
                                        <ToolBar HBox.hgrow="NEVER">
                                            <items>
                                                <Label text="%CurrentFileCharset" />
                                                <ComboBox fx:id="currentBox" prefWidth="150.0" />
                                                <Label fx:id="bomLabel">
                                                    <padding>
                                                        <Insets right="20.0" />
                                                    </padding>
                                                </Label>
                                                <Label text="%ChangeAsWhenSave" />
                                                <ComboBox fx:id="targetBox" prefWidth="150.0" />
                                                <CheckBox fx:id="targetBomCheck" mnemonicParsing="false" text="BOM" />
                                            </items>
                                        </ToolBar>
                                    </children>
                                </HBox>
                            </content>
                        </Tab>
                        <Tab fx:id="lbTab" text="%BreakLine">
                            <content>
                                <HBox alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT">
                                    <children>
                                        <ToolBar HBox.hgrow="ALWAYS">
                                            <items>
                                                <Button mnemonicParsing="false" text=" " visible="false" />
                                            </items>
                                        </ToolBar>
                                        <ToolBar HBox.hgrow="NEVER">
                                            <items>
                                                <Label text="%CurrentFileLineBreak" />
                                                <TextField fx:id="currentLineBreak" disable="true" editable="false" prefWidth="80.0" text="LF" />
                                                <Label text="%ChangeAsWhenSave" />
                                                <RadioButton fx:id="lfRadio" mnemonicParsing="false" selected="true" text="%LF">
                                                    <toggleGroup>
                                                        <ToggleGroup fx:id="lineBreakGroup" />
                                                    </toggleGroup>
                                                </RadioButton>
                                                <RadioButton fx:id="crRadio" mnemonicParsing="false" text="%CR" toggleGroup="$lineBreakGroup" />
                                                <RadioButton fx:id="crlfRadio" mnemonicParsing="false" text="%CRLF" toggleGroup="$lineBreakGroup" />
                                            </items>
                                        </ToolBar>
                                    </children>
                                </HBox>
                            </content>
                        </Tab>
                        <Tab fx:id="displayTab" text="%Bytes">
                            <content>
                                <HBox alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT">
                                    <children>
                                        <ToolBar HBox.hgrow="ALWAYS">
                                            <items>
                                                <Label text="%SecondAreaComments" />
                                                <CheckBox mnemonicParsing="false" text=" " visible="false" />
                                            </items>
                                        </ToolBar>
                                        <ToolBar HBox.hgrow="NEVER">
                                            <items>
                                                <CheckBox fx:id="scrollCheck" mnemonicParsing="false" selected="true" text="%ScrollSynchronously" />
                                                <CheckBox fx:id="displayCheck" mnemonicParsing="false" selected="true" text="%DisplayHexadecimalByCurrent" />
                                            </items>
                                        </ToolBar>
                                    </children>
                                </HBox>
                            </content>
                        </Tab>
                        <Tab fx:id="pageTab" text="%Paginate">
                            <content>
                                <HBox alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT">
                                    <children>
                                        <ToolBar HBox.hgrow="ALWAYS">
                                            <items>
                                                <Button mnemonicParsing="false" text=" " visible="false" />
                                            </items>
                                        </ToolBar>
                                        <ToolBar HBox.hgrow="NEVER">
                                            <items>
                                                <Label text="%PageSize" />
                                                <Label text="%TextPaginateComment" />
                                                <TextField fx:id="pageSizeInput" prefWidth="80.0" text="100000" />
                                                <Button fx:id="pageSizeButton" mnemonicParsing="false" onAction="#pageSizeAction" text="%OK" />
                                            </items>
                                        </ToolBar>
                                    </children>
                                </HBox>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
                <SplitPane fx:id="splitPane" prefHeight="160.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                    <items>
                        <AnchorPane fx:id="mainPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                            <children>
                                <TextArea fx:id="lineArea" maxHeight="1.7976931348623157E308" prefWidth="150.0" styleClass="grayArea" stylesheets="@../styles/MyBox.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0" />
                                <TextArea fx:id="mainArea" layoutX="24.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" promptText="%EditHere" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="75.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                            </children>
                        </AnchorPane>
                    </items>
                </SplitPane>
                <HBox alignment="CENTER_LEFT" VBox.vgrow="NEVER">
                    <children>
                        <ToolBar fx:id="rangeBar" HBox.hgrow="ALWAYS">
                            <items>
                                <Button mnemonicParsing="false" text=" " visible="false" />
                            </items>
                        </ToolBar>
                        <ToolBar fx:id="pageBar" disable="true" HBox.hgrow="NEVER">
                            <items>
                                <Button fx:id="firstButtonButton" mnemonicParsing="false" onAction="#firstPageAction" text="%FirstPage" />
                                <Button fx:id="perviousPageButton" mnemonicParsing="false" onAction="#previousPageAction" text="%PreviousPage" />
                                <Button fx:id="nextPageButton" mnemonicParsing="false" onAction="#nextPageAction" text="%NextPage" />
                                <Button fx:id="lastPageButton" mnemonicParsing="false" onAction="#lastPageAction" text="%LastPage" />
                                <Label text="%Page" />
                                <TextField fx:id="pageInput" prefWidth="60.0" text="1" />
                                <Label fx:id="pageLabel" />
                                <Button fx:id="pageGoButton" mnemonicParsing="false" onAction="#goPageAction" text="%Go" />
                            </items>
                        </ToolBar>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
    <bottom>
        <HBox alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="bottomLabel" HBox.hgrow="ALWAYS" />
                <Label fx:id="selectionLabel" HBox.hgrow="NEVER">
                    <HBox.margin>
                        <Insets left="20.0" />
                    </HBox.margin>
                </Label>
            </children>
        </HBox>
    </bottom>
</BorderPane>
